---
const STORAGE_KEY = "acl-cookie-consent";
---

<div class="cookie-banner" data-cookie-banner>
  <div class="cookie-banner-inner">
    <p class="cookie-banner-text">
      We use cookies to make this site work properly and to understand how it’s
      used. By clicking “Accept”, you agree to our use of cookies.
      <a href="/privacy/" class="cookie-banner-link">
        Read our Privacy Policy
      </a>
    </p>

    <button type="button" class="cookie-banner-button" data-cookie-accept>
      Accept
    </button>
  </div>
</div>

<script is:inline>
  (function () {
    if (typeof window === "undefined") return;
    var STORAGE_KEY = "acl-cookie-consent";
    var banner = document.querySelector("[data-cookie-banner]");
    if (!banner) return;

    var consent = window.localStorage.getItem(STORAGE_KEY);
    if (consent === "accepted") {
      banner.style.display = "none";
      return;
    }

    var btn = banner.querySelector("[data-cookie-accept]");
    if (!btn) return;

    btn.addEventListener("click", function () {
      window.localStorage.setItem(STORAGE_KEY, "accepted");
      banner.style.display = "none";
    });
  })();
</script>

<style>
  .cookie-banner {
    position: fixed;
    inset-inline: 0;
    bottom: 0;
    z-index: 9999;
    padding: 0.75rem 1rem;
    background: rgba(21, 39, 5, 0.95); /* dark green */
    color: #fef8eb; /* cream */
    backdrop-filter: blur(6px);
    font-family: var(--font-body, system-ui);
    
  }

  .cookie-banner-inner {
    max-width: 1100px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .cookie-banner-text {
    margin: 0;
    line-height: 1.6;
    font-size:0.8rem;
    
  }

  .cookie-banner-link {
    color: #fef8eb;
    text-decoration: underline;
    text-underline-offset: 2px;
    margin-left: 0.25rem;
  }

  .cookie-banner-link:hover {
    text-decoration-thickness: 2px;
  }

  .cookie-banner-button {
    margin-left: auto;
    flex-shrink: 0;
    padding: 0.55rem 1.4rem;
    border-radius: 999px;
    border: 1px solid rgba(254, 248, 235, 0.7);
    background:  #fef8eb; 
    color:  #152705;;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    cursor: pointer;
    transition: transform 0.12s ease, box-shadow 0.12s ease,
      background-color 0.12s ease, border-color 0.12s ease;
  }

  .cookie-banner-button:hover {
    transform: translateY(-1px);
    box-shadow: 0 8px 18px rgba(0, 0, 0, 0.25);
    border-color: #fef8eb;
  }

  @media (max-width: 640px) {
    .cookie-banner-inner {
      flex-direction: column;
      align-items: stretch;
      gap: 0.75rem;
    }

    .cookie-banner-button {
      width: 100%;
      text-align: center;
      margin-left: 0;
    }
  }
</style>
