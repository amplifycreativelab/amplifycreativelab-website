    /* #24360F00 */
    color: var(--e-global-color-fadab83, #4a2e1c);
    border: none;
    border-radius: 0;
    padding: 0;
    /* matches the Elementor kit overrides */

    cursor: pointer;
    box-shadow: none;
    transition:
      color 0.15s ease,
      transform 0.12s ease;
  }

  .form-button:hover {
    color: var(--e-global-color-fadab83, #4a2e1c);
    transform: translateY(-1px);
  }

  .form-button:active {
    transform: translateY(0);
  }

  .form-button-inner {
    display: inline-flex;
    align-items: center;
    gap: 8px;
