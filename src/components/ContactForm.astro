    margin: 0 auto;
    padding-inline: clamp(24px, 6vw, 130px);
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .contact-heading {
    font-family: "Abril Fatface", Sans-serif;
    font-size: 28px;
    font-weight: 300;
    font-style: normal;
    line-height: 32px;

    letter-spacing: 2.5px;
    padding: 0px;
    color: var(--color-heading, #152705);
  }

  .contact-intro {
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--color-heading, #152705);
  }

  .contact-form {
    width: 100%;
  }

  .contact-form-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 20px;
  }

  /* Half-width fields (name, email, phone, date) */
  .form-field-half {
    width: 100%;
  }

  /* Full-width fields (message, extra slot fields if needed) */
  .form-field-full {
    grid-column: 1 / -1;
  }

  /* Mobile: stack everything in one column */
  @media (max-width: 768px) {
    .contact-form-grid {
      grid-template-columns: 1fr;
    }
  }

  .form-field {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .form-label {
    font-family:
      var(--e-global-typography-text-font-family, "Roboto"), sans-serif;
    font-size: 0.9rem;
    color: var(--e-global-color-primary, #fef8eb);
  }

  .form-input,
  .form-textarea {
    display: block;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
    padding: 10px 12px;
    border-radius: 4px;
    border: 1px solid rgba(0, 0, 0, 0.15);
    font-family: inherit;
    font-size: 0.95rem;
    color: #24360f;
    background-color: rgba(254, 248, 235, 0.9);
    /* #FEF8EB with a touch of transparency */
    outline: none;
    transition:
      border-color 0.15s ease,
      box-shadow 0.15s ease,
      background-color 0.15s ease;
  }

  .form-input:focus,
  .form-textarea:focus {
    border-color: var(--theme-palette-color-1, #2872fa);
    box-shadow: 0 0 0 2px rgba(40, 114, 250, 0.25);
    background-color: #ffffff;
  }

  .form-textarea {
    resize: vertical;
    min-height: 120px;
  }

  /* Honeypot: keep it invisible but in the DOM */
  .contact-form-honeypot {
    display: none;
  }

  .form-actions {
    margin-top: 20px;
    display: flex;
    justify-content: flex-end;
    /* or center / flex-start */
  }

  /* Match Elementor button look */
  .form-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;

    /* Typography */
    font-family: "Abril Fatface", sans-serif;
    font-size: 17px;
    font-weight: 100;
    line-height: 12px;
    text-transform: none;
    letter-spacing: 0;

    /* Visuals */
