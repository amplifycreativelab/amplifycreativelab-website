  <div class="hero-slideshow-slide hero-slideshow-slide-1"></div>
  <div class="hero-slideshow-slide hero-slideshow-slide-2"></div>
  <div class="hero-slideshow-slide hero-slideshow-slide-3"></div>
  <div class="hero-slideshow-slide hero-slideshow-slide-4"></div>
</section>

<style>
 .background-slideshow {
  position: relative;
  width: 100%;
  height: 400px;
  /* adjust to match original section */
  overflow: hidden;
}

.background-slideshow-slide {
  position: absolute;
  inset: 0;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  opacity: 0;
  animation: background-slideshow-fade 12s infinite;
}

/* Slide images (point to your local copies) */
.hero-slideshow {
  position: relative;
  width: 100%;
  /* Match original “wide banner” ratio: 1025 / 2560 ≈ 0.40 */
  height: min(40vw);
  overflow: hidden;
}

/* Mobile: a bit taller so it doesn’t become tiny */
@media (max-width: 768px) {
  .hero-slideshow {
    height: 260px;
  }
}

.hero-slideshow-slide {
  position: absolute;
  inset: 0;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  opacity: 0;
  animation: hero-slideshow-fade 16s infinite;
}

/* One class per slide – update URLs to your real filenames */
.hero-slideshow-slide-1 {
  background-image: url("/images/home/mussels-2560x1025.jpg");
  animation-delay: 0s;
}

.hero-slideshow-slide-2 {
  background-image: url("/images/home/orecchiette-2560x1025.jpg");
  animation-delay: 4s;
}

.hero-slideshow-slide-3 {
  background-image: url("/images/home/wedding-2560x1025.jpg");
  animation-delay: 8s;
}

.hero-slideshow-slide-4 {
  background-image: url("/images/home/family-2560x1025.jpg");
  animation-delay: 12s;
}

/* 4-slide cross-fade:
   – total cycle: 24s
   – each slide: visible ~0–20% of its own window, then fades out
*/
@keyframes hero-slideshow-fade {

  0%,
  20% {
    opacity: 1;
  }

  25%,
  100% {
    opacity: 0;
  }
}
</style>

