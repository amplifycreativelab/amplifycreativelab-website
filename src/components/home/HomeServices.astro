---
import { Image } from "astro:assets";
import foodPhoto from "../../assets/images/home/Pasta.webp";
import eventPhoto from "../../assets/images/home/Dance2.webp";
import productPhoto from "../../assets/images/home/Wine.webp";
import webPhoto from "../../assets/images/home/Web Development.webp";
---

<section class="services">
  <!-- Full-width bar with top/bottom border -->
  <div class="services-heading-bar">
    <div class="services-heading">
      <h2 class="services-title">OUR SERVICES</h2>
    </div>
  </div>

  <!-- Normal constrained container for the cards -->
  <div class="services-container" id="services-container">
    <div class="services-grid">
      <!-- Service 1 – Food Photography -->
      <article class="service-card">
        <a class="service-image-link" href="/perth-food-photography">
          <Image
            class="service-image"
            src={foodPhoto}
            width={768}
            height={960}
            widths={[320, 480, 640, 768]}
            sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 25vw"
            alt="Food photography in Perth for restaurants and cafes"
            quality={60}
            loading="lazy"
            decoding="async"
          />
        </a>
        <a class="service-button" href="/perth-food-photography">
          Food Photography
        </a>
        <p class="service-summary">
          Professional food photography for Perth restaurants, cafés, and
          hospitality venues. Menu imagery, styled hero dishes, and social-ready
          content created with commercial lighting and studio techniques.
        </p>
      </article>

      <!-- Service 2 – Portrait Photography -->
      <article class="service-card">
        <a class="service-image-link" href="/perth-event-photography">
          <Image
            class="service-image"
            src={eventPhoto}
            width={768}
            height={960}
            widths={[320, 480, 640, 768]}
            sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 25vw"
            alt="Wedding, events and portrait photography in Perth with floral background"
            quality={60}
            loading="lazy"
            decoding="async"
          />
        </a>
        <a class="service-button" href="/perth-event-photography">
          Event Photography
        </a>
        <p class="service-summary">
          Event and portrait photography for Perth businesses, weddings, and
          private events. Coverage includes candid moments, branding content,
          and story-focused imagery.
        </p>
      </article>

      <!-- Service 3 – Event -->
      <article class="service-card">
        <a class="service-image-link" href="/perth-product-photography">
          <Image
            class="service-image"
            src={productPhoto}
            width={768}
            height={960}
            widths={[320, 480, 640, 768]}
            sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 25vw"
            alt="Product photography for e-commerce and Perth businesses"
            quality={60}
            loading="lazy"
            decoding="async"
          />
        </a>
        <a class="service-button" href="/perth-product-photography">
          Product Photography
        </a>
        <p class="service-summary">
          Product photography for e-commerce and retail brands in Perth.
          Studio-lit catalogue shots, styled product scenes, and
          conversion-optimized imagery for online stores.
        </p>
      </article>
      <!-- Service 4 – Web Development -->
      <article class="service-card">
        <a class="service-image-link" href="/perth-website-development/">
          <Image
            class="service-image"
            src={webPhoto}
            width={768}
            height={960}
            widths={[320, 480, 640, 768]}
            sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 25vw"
            alt="Website design and development for Perth businesses"
            quality={60}
            loading="lazy"
            decoding="async"
          />
        </a>
        <a class="service-button" href="/perth-website-development/">
          Website Development
        </a>
        <p class="service-summary">
          Custom website design and development for Perth businesses.
          Fast-loading, SEO-friendly, mobile-responsive sites crafted for
          hospitality, retail, and service industries.
        </p>
      </article>
    </div>
  </div>
</section>

<style>
  /* ========== HOMEPAGE – SERVICES SECTION ========== */

  /* Whole section background only */
  .services {
    background: var(--color-page-bg, #fef8eb);
  }

  /* Bar with top/bottom border, full-width like the original screenshot */
  .services-heading-bar {
    width: 100%;
    border-top: 2px solid var(--color-heading);
    border-bottom: 2px solid var(--color-heading);
    padding: 20px 0;
  }

  /* Center the text inside the bar */
  .services-heading {
    display: flex;
    justify-content: center;
    align-items: center;
    width: min(100%, var(--container-max));
    margin: 0 auto;
  }

  .services-title {
    font-family: "Abril Fatface", Sans-serif;
    font-size: 35px;
    font-weight: 300;
    line-height: 12px;
    letter-spacing: 1.6px;
    color: #152705;
    margin: 0;
    text-align: center;
  }

  /* Content area below the bar */
  .services-container {
    width: min(100%);
    padding: 50px 50px 50px 50px;
    /* top 20, sides 40, bottom 40 (like Elementor row) */
  }

  /* Grid of service cards – same as original */
  .services-grid {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 30px;
    width: 100%;
  }

  /* Individual card layout */
  /* Single service card – matches Elementor child container behaviour */
  .service-card {
    display: flex;
    flex-direction: column;
    /* image on top, button below */
    justify-content: flex-start;
    /* align content to the top of the card */
    align-items: flex-start;
    /* center horizontally */
    gap: 30px;
    /* same as Elementor widget spacing */

    /* similar to Elementor default container padding */
  }

  /* Image fills card width */
  .service-image-link,
  .service-image {
    display: block;
    width: 100%;
    height: auto;
  }

  /* Button under each image */
  .service-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-family: "Montserrat", Sans-serif;
    padding: 1rem 1.8rem 1rem 0rem;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: underline;
    letter-spacing: 0.08em;
    border-radius: 3px;
    background-color: transparent;
    color: var(--color-accent, #24360f);
    border: none;
    cursor: pointer;
    transition: background-color var(--transition-fast, 0.3s ease);
    text-transform: uppercase;
  }

  .service-button:hover {
    color: #c47309;
  }

  .service-summary {
    font-size: 1rem; /* Fixed typo from 15x */
    color: #544f49; /* specific accessible override */
    margin-top: -1.9rem;
  }

  /* Responsive columns, same behaviour as Elementor “wrap” */
  @media (max-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
      gap: 0px;
    }
  }

  /* Mobile responsiveness */
  @media (max-width: 1024px) {
    .services-container {
      padding: 15px 0;
    }

    .services-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (max-width: 768px) {
    .services-container {
      padding: 0px 0;
    }

    .services-title {
      font-size: 28px;
      line-height: 10px;
    }

    .services-grid {
      grid-template-columns: 1fr;
    }
    .service-button {
      padding: 30px 0px 30px 0px;
    }

    .service-image {
      display: block;
      width: 100%;
      height: auto;
    }

    .service-summary {
      padding: 0px 30px 30px 30px;
    }
  }

  @media (max-width: 480px) {
    .services-container {
      padding: 0px 0;
    }

    .service-card {
      gap: 0px;
    }
    .service-button {
      padding: 30px 0px 30px 0px;
    }
    .services-grid {
      grid-template-columns: 1fr;
      gap: 0px;
    }
  }

  @media (max-width: 1024px) {
    .services-container {
      padding: 20px 0px;
    }
  }

  @media (max-width: 768px) {
    .services-container {
      padding: 0px 0px 15px 0px;
    }
    .service-card {
      gap: 0px;
      padding:20px 20px;
    }

   
    .service-summary {
    padding:0;
    margin-top:-1rem;
  }
</style>
