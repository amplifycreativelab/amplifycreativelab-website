<script>
    const BATCH = 12;

    // Get elements
    const grid = document.getElementById("gallery-grid")!;
    const filter = document.getElementById(
        "category-filter",
    ) as HTMLSelectElement;
    const loadMoreBtn = document.getElementById("load-more-btn")!;
