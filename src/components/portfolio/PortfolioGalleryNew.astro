// Types
type Category = "food" | "event" | "family" | "product" | "portrait";
interface ImageItem {
    thumbSrc: string;
    thumbSrcSet: string;
    fullSrc: string;
    alt: string;
    title: string;
}

// Generate optimized images
async function processImages(
    folder: string,
    files: string[],
    alts: Record<string, string>,
    title: string,
): Promise<ImageItem[]> {
    const items: ImageItem[] = [];

    for (const file of files) {
        const image = getPortfolioImage(folder, file);
        if (!image) continue;

        try {
            const thumb = await getImage({
                src: image,
                width: 240,
                height: 240,
                widths: [160, 240, 320, 480],
                fit: "cover",
                format: "webp",
                quality: 100,
            });

            const full = await getImage({
                src: image,
                width: 1920,
                format: "webp",
                quality: 90,
            });

            items.push({
                thumbSrc: thumb.src,
                thumbSrcSet: thumb.srcSet?.attribute || "",
                fullSrc: full.src,
                alt: alts[file] || `${title} image`,
                title,
            });
        } catch (e) {
            console.error(`Failed to process: ${file}`, e);
        }
    }

    return items;
}

// Process all categories
