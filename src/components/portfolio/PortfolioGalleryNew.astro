    const lightboxTitle = document.getElementById("lightbox-title")!;
    const lightboxIndex = document.getElementById("lightbox-index")!;
    const closeBtn = document.getElementById("lightbox-close")!;
    const prevBtn = document.getElementById("lightbox-prev")!;
    const nextBtn = document.getElementById("lightbox-next")!;

    // Parse data
    type ImageItem = {
        thumbSrc: string;
        thumbSrcSet: string;
        fullSrc: string;
        alt: string;
        title: string;
    };
    type AllData = Record<string, ImageItem[]>;

    let data: AllData = {
        food: [],
        event: [],
        family: [],
        product: [],
        portrait: [],
    };
    try {
        const raw =
            document.getElementById("portfolio-data")?.textContent || "{}";
        data = JSON.parse(raw);
    } catch (e) {
        console.error("Failed to parse portfolio data", e);
    }

    let currentCategory = "food";
    let visibleCount = BATCH;
    let activeIndex = -1;

    function getCurrentItems(): ImageItem[] {
        return data[currentCategory] || [];
    }

    function createItemElement(
        item: ImageItem,
        index: number,
    ): HTMLAnchorElement {
        const link = document.createElement("a");
        link.className = "portfolio-item";
        link.href = "#";
        link.dataset.index = String(index);
        link.dataset.full = item.fullSrc;
        link.dataset.alt = item.alt;
        link.dataset.title = item.title;

        link.innerHTML = `
      <figure class="portfolio-item-figure">
        <img
          src="${item.thumbSrc}"
          srcset="${item.thumbSrcSet}"
          sizes="(max-width: 1024px) 33vw, (max-width: 1490px) 25vw, 372px"
          width="240"
          height="240"
          alt="${item.alt}"
          loading="lazy"
          decoding="async"
          class="portfolio-item-image"
        />
        <figcaption class="portfolio-item-overlay">
          <span class="portfolio-item-title">${item.title}</span>
          <span class="portfolio-item-label">- view -</span>
        </figcaption>
      </figure>
    `;

        return link;
    }

    function renderGrid() {
        const items = getCurrentItems();
        visibleCount = Math.min(BATCH, items.length);
        grid.innerHTML = "";

        for (let i = 0; i < visibleCount; i++) {
            grid.appendChild(createItemElement(items[i], i));
        }

        updateLoadMoreButton();
    }

    function updateLoadMoreButton() {
        const items = getCurrentItems();
        loadMoreWrapper.style.display =
            visibleCount >= items.length ? "none" : "";
    }

    function loadMore() {
        const items = getCurrentItems();
        const nextCount = Math.min(visibleCount + BATCH, items.length);

        for (let i = visibleCount; i < nextCount; i++) {
            grid.appendChild(createItemElement(items[i], i));
        }

        visibleCount = nextCount;
        updateLoadMoreButton();
    }

    function openLightbox(index: number) {
        const items = getCurrentItems();
        if (index < 0 || index >= items.length) return;

        activeIndex = index;
        const item = items[index];

        lightboxImg.src = item.fullSrc;
        lightboxImg.alt = item.alt;
        lightboxTitle.textContent = item.title;
        lightboxIndex.textContent = `${index + 1} / ${items.length}`;

        lightbox.classList.add("is-active");
        lightbox.setAttribute("aria-hidden", "false");
        document.body.style.overflow = "hidden";
    }

    function closeLightbox() {
        activeIndex = -1;
        lightbox.classList.remove("is-active");
        lightbox.setAttribute("aria-hidden", "true");
        document.body.style.overflow = "";
        lightboxImg.src = "";
    }

    function showPrev() {
        const items = getCurrentItems();
        if (items.length === 0) return;
        activeIndex = (activeIndex - 1 + items.length) % items.length;
        openLightbox(activeIndex);
    }

    function showNext() {
        const items = getCurrentItems();
        if (items.length === 0) return;
        activeIndex = (activeIndex + 1) % items.length;
        openLightbox(activeIndex);
    }

    // Event listeners
    filter.addEventListener("change", () => {
        currentCategory = filter.value;
        closeLightbox();
        renderGrid();
    });

    loadMoreBtn.addEventListener("click", loadMore);

    grid.addEventListener("click", (e) => {
        e.preventDefault();
        const target = e.target as Element;
        const link = target.closest(
            ".portfolio-item",
        ) as HTMLAnchorElement | null;
        if (!link) return;

        const index = parseInt(link.dataset.index || "-1", 10);
        if (index >= 0) openLightbox(index);
    });

    closeBtn.addEventListener("click", closeLightbox);
    prevBtn.addEventListener("click", showPrev);
    nextBtn.addEventListener("click", showNext);

    lightbox.addEventListener("click", (e) => {
        if (e.target === lightbox) closeLightbox();
    });

    document.addEventListener("keydown", (e) => {
        if (!lightbox.classList.contains("is-active")) return;
        if (e.key === "Escape") closeLightbox();
        if (e.key === "ArrowLeft") showPrev();
        if (e.key === "ArrowRight") showNext();
    });
</script>

