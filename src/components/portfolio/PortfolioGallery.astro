<section class="portfolio-section" aria-label="Photography portfolio gallery">
  <div class="portfolio-inner">
    <header class="portfolio-header">
      <h1 class="portfolio-title">Portfolio</h1>
      <p class="portfolio-lead">
        Food, product, event and portrait photography across Perth.
      </p>
    </header>

    <div class="portfolio-filters" aria-label="Filter portfolio by category">
      <select
        id="portfolio-filter-select"
        class="portfolio-filter-select"
        aria-label="Filter portfolio by category"
      >
        <option value="food">Food</option>
        <option value="events">Events</option>
        <option value="family">Family</option>
        <option value="product">Product</option>
        <option value="portrait">Portrait</option>
      </select>
    </div>
    <div class="portfolio-grid">
      {
        portfolioItems.map((item, index) => (
          <a
            class="portfolio-item"
            href="#"
            data-index={index}
            data-alt={item.alt}
            data-title={item.title}
            data-category={item.category}
            data-full={item.fullSrc || item.src}
            data-full-width={item.fullWidth || undefined}
            data-full-height={item.fullHeight || undefined}
          >
            <figure class="portfolio-item-figure">
              <Image
                src={item.image ?? item.src}
                alt={item.alt}
                width={600}
                widths={[300, 600, 800]}
                sizes="(max-width: 768px) 33vw, (max-width: 1024px) 25vw, 20vw"
                loading={index < 12 ? "eager" : "lazy"}
                decoding="async"
                class="portfolio-item-image"
              />
              <figcaption class="portfolio-item-overlay">
                <span class="portfolio-item-title">{item.title}</span>
                <span class="portfolio-item-label">- view -</span>
              </figcaption>
            </figure>
          </a>
        ))
      }
    </div>

    <div class="portfolio-load-more-wrapper">
      <button
        type="button"
        class="portfolio-load-more portfolio-filter-select"
        data-action="load-more"
      >
        Load more
      </button>
    </div>
  </div>

  <div
    class="portfolio-lightbox"
    aria-hidden="true"
    role="dialog"
    aria-modal="true"
  >
    <button
      class="portfolio-lightbox__close"
      type="button"
      aria-label="Close image">X</button
    >

    <button
      class="portfolio-lightbox__nav portfolio-lightbox__nav--prev"
      type="button"
      aria-label="Previous image">&lt;</button
    >

    <figure class="portfolio-lightbox__figure">
      <img
        class="portfolio-lightbox__image"
        loading="lazy"
        decoding="async"
        width="1200"
        height="800"
        alt="Selected portfolio photograph from the gallery"
      />
      <figcaption class="portfolio-lightbox__caption">
        <span class="portfolio-lightbox__title"></span>
        <span class="portfolio-lightbox__index"></span>
      </figcaption>
    </figure>

    <button
      class="portfolio-lightbox__nav portfolio-lightbox__nav--next"
      type="button"
      aria-label="Next image">&gt;</button
    >
</div>
</section>

