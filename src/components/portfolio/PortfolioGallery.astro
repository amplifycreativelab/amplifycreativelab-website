import { Image, getImage } from "astro:assets";

interface PortfolioItem {
  src: string;
  alt: string;
  title: string;
  category: string;
  image?: any;
  fullSrc?: string;
  fullWidth?: number;
  fullHeight?: number;
}

// Eagerly import all portfolio images from src/assets so Astro can
// optimize them while still letting us group them by category.
const portfolioImageModules = import.meta.glob(
  "../../assets/images/portfolio/**/*.{webp,avif,jpg,jpeg,png}",
  { eager: true },
);

function getPortfolioImage(folder: string, file: string) {
  const key = `../../assets/images/portfolio/${folder}/${file}`;
  const mod = (portfolioImageModules as Record<string, any>)[key];

  if (!mod) return undefined;

  // For asset imports the metadata is usually the default export.
  return mod.default ?? mod;
}

async function createPortfolioItems(
  folder: string,
  category: string,
  files: string[],
  alts: Record<string, string>,
  title: string,
  altPrefix: string,
): Promise<PortfolioItem[]> {
  const items = files.map(async (file, index) => {
    const image = getPortfolioImage(folder, file);
    const src = (image && image.src) || `/images/portfolio/${folder}/${file}`;

    let fullSrc = src;
    let fullWidth = 0;
    let fullHeight = 0;

    if (image) {
      try {
        const optimized = await getImage({
          src: image,
          width: 1920,
          format: "webp",
          quality: 90,
        });
        fullSrc = optimized.src;
        fullWidth = optimized.attributes.width
          ? Number(optimized.attributes.width)
          : 0;
        fullHeight = optimized.attributes.height
          ? Number(optimized.attributes.height)
          : 0;
      } catch (e) {
        console.error(`Failed to optimize image: ${file}`, e);
      }
    }

    return {
      src,
      alt: alts[file] || `${altPrefix} ${index + 1}`,
      title,
      category,
      image,
      fullSrc,
      fullWidth,
      fullHeight,
    };
  });

  return Promise.all(items);
}

