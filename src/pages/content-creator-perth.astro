---
import BaseLayout from "../layouts/BaseLayout.astro";
import ContentCreatorIntro from "../components/content-creator-perth/ContentCreatorIntro.astro";
import ContentCreatorPricing from "../components/content-creator-perth/ContentCreatorPricing.astro";
import SocialMediaContent from "../components/content-creator-perth/SocialMediaContent.astro";

const pageTitle =
    "Content Creation Perth | Amplify Creative Lab Social Media Content";
const pageDescription =
    "Perth content creation for businesses. Professional Reels, TikToks, and social media content photography and video to grow your brand online.";

const faqSchema = {
    "@context": "https://schema.org",
    "@graph": [
        {
            "@type": "BreadcrumbList",
            itemListElement: [
                {
                    "@type": "ListItem",
                    position: 1,
                    name: "Home",
                    item: "https://amplifycreativelab.com/",
                },
                {
                    "@type": "ListItem",
                    position: 2,
                    name: "Content Creation",
                    item: "https://amplifycreativelab.com/content-creator-perth/",
                },
            ],
        },
        {
            "@type": "Service",
            "@id": "https://amplifycreativelab.com/#service-content-creation",
            name: "Content Creation",
            url: "https://amplifycreativelab.com/content-creator-perth/",
            description:
                "Professional content creation services for Perth businesses, including short-form video, Reels, TikToks, and social media photography.",
            areaServed: "Perth, Western Australia",
            provider: {
                "@id": "https://amplifycreativelab.com/#organization",
            },
        },
        {
            "@type": "FAQPage",
            mainEntity: [
                {
                    "@type": "Question",
                    name: "How much does a content creator cost in Perth?",
                    acceptedAnswer: {
                        "@type": "Answer",
                        text: "Our content creation rates start at $200 per hour for your first session. We also offer monthly retainer packages starting from $1200/month for businesses that need a consistent flow of fresh video and photo assets.",
                    },
                },
                {
                    "@type": "Question",
                    name: "Do you create Reels and TikToks?",
                    acceptedAnswer: {
                        "@type": "Answer",
                        text: "Yes. Short-form video is our speciality. We plan, shoot, and edit high-quality Reels and TikToks designed to engage your local Perth audience and leverage current trends.",
                    },
                },
                {
                    "@type": "Question",
                    name: "Do I need to be in the videos?",
                    acceptedAnswer: {
                        "@type": "Answer",
                        text: "Not if you don't want to be! While personal brand content performs well, we can create engaging videos focusing on your products, services, team, or behind-the-scenes processes without you needing to speak on camera.",
                    },
                },
                {
                    "@type": "Question",
                    name: "Can you manage my social media account as well?",
                    acceptedAnswer: {
                        "@type": "Answer",
                        text: "We focus primarily on content production (strategy, shooting, editing). However, we have partners we can recommend for full social media management (posting, community engagement) if you need a hands-off solution.",
                    },
                },
                {
                    "@type": "Question",
                    name: "Do you travel to my business?",
                    acceptedAnswer: {
                        "@type": "Answer",
                        text: "Yes. We come to you. Whether you're a café in Fremantle, a boutique in Subiaco, or an office in the CBD, we shoot on location to capture the authentic vibe of your business.",
                    },
                },
            ],
        },
    ],
};
---

<BaseLayout title={pageTitle} description={pageDescription}>
    <main class="page-content-creator-perth">
        <ContentCreatorIntro />
        <SocialMediaContent />
        <ContentCreatorPricing />

        <section class="content-faq">
            <div class="content-faq__inner">
                <h2 class="content-faq__title">Content Creation FAQs</h2>

                <div class="content-faq__list">
                    <details class="content-faq__item">
                        <summary class="content-faq__question">
                            How much does a content creator cost in Perth?
                        </summary>
                        <p class="content-faq__answer">
                            Our content creation rates start at <strong
                                >$200 per hour</strong
                            > for your first session. We also offer <strong
                                >monthly retainer packages</strong
                            > starting from $1200/month for businesses that need a
                            consistent flow of fresh video and photo assets.
                        </p>
                    </details>

                    <details class="content-faq__item">
                        <summary class="content-faq__question">
                            Do you create Reels and TikToks?
                        </summary>
                        <p class="content-faq__answer">
                            Yes. Short-form video is our speciality. We plan,
                            shoot, and edit high-quality Reels and TikToks
                            designed to engage your local Perth audience and
                            leverage current trends.
                        </p>
                    </details>

                    <details class="content-faq__item">
                        <summary class="content-faq__question">
                            Do I need to be in the videos?
                        </summary>
                        <p class="content-faq__answer">
                            Not if you don't want to be! While personal brand
                            content performs well, we can create engaging videos
                            focusing on your products, services, team, or
                            behind-the-scenes processes without you needing to
                            speak on camera.
                        </p>
                    </details>

                    <details class="content-faq__item">
                        <summary class="content-faq__question">
                            Can you manage my social media account as well?
                        </summary>
                        <p class="content-faq__answer">
                            We focus primarily on content production (strategy,
                            shooting, editing). However, we have partners we can
                            recommend for full social media management (posting,
                            community engagement) if you need a hands-off
                            solution.
                        </p>
                    </details>

                    <details class="content-faq__item">
                        <summary class="content-faq__question">
                            Do you travel to my business?
                        </summary>
                        <p class="content-faq__answer">
                            Yes. We come to you. Whether you're a café in
                            Fremantle, a boutique in Subiaco, or an office in
                            the CBD, we shoot on location to capture the
                            authentic vibe of your business.
                        </p>
                    </details>
                </div>
            </div>

            <script
                type="application/ld+json"
                set:html={JSON.stringify(faqSchema)}
            />
        </section>
    </main>

    <style is:global>
        .page-content-creator-perth {
            display: flex;
            flex-direction: column;
            gap: 0;
        }

        .content-faq {
            background-color: var(--e-global-color-secondary, #e8d8c3);
            padding: 60px 24px;
            display: flex;
            justify-content: center;
        }

        .content-faq__inner {
            width: 100%;
            max-width: 1100px;
        }

        .content-faq__title {
            font-family: "Abril Fatface", sans-serif;
            font-size: 40px;
            font-weight: 500;
            margin: 0 0 24px;
            color: var(--e-global-color-fadab83, #4a2e1c);
            text-align: left;
        }

        .content-faq__list {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .content-faq__item {
            border-bottom: 1px solid rgba(74, 46, 28, 0.25);
            padding: 8px 0 12px;
        }

        .content-faq__question {
            font-family: "Darker Grotesque", sans-serif;
            font-size: 20px;
            font-weight: 600;
            cursor: pointer;
            list-style: none;
            color: var(--e-global-color-fadab83, #4a2e1c);
        }

        .content-faq__answer {
            font-family: "Darker Grotesque", sans-serif;
            font-size: 18px;
            font-weight: 400;
            line-height: 1.4;
            margin-top: 6px;
            color: var(--e-global-color-fadab83, #4a2e1c);
        }

        @media (max-width: 768px) {
            .content-faq {
                padding: 40px 16px;
            }

            .content-faq__title {
                font-size: 32px;
            }

            .content-faq__question {
                font-size: 18px;
            }

            .content-faq__answer {
                font-size: 16px;
            }
        }
    </style>
</BaseLayout>
