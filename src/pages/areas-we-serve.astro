        padding: 0 1.5rem;
    }
    h1 {
        font-family: var(--font-heading);
        color: var(--color-primary);
        font-size: 2.5rem;
        margin-bottom: 1.25rem;
        line-height: 1.1;
    }
    h2 {
        font-family: var(--font-heading);
        color: var(--color-primary);
        font-size: 2rem;
        margin-top: 3rem;
        margin-bottom: 1.5rem;
    }
    h3 {
        font-family: var(--font-body);
        font-weight: 700;
        color: var(--color-text);
        font-size: 1.1rem;
        margin: 0 0 0.75rem;
    }
    .intro {
        font-size: 1.125rem;
        line-height: 1.6;
        margin-bottom: 2.25rem;
        max-width: 70ch;
    }
    .areas-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1.75rem;
    }
    .area-group {
        background: rgba(255, 255, 255, 0.6);
        border: 1px solid rgba(0, 0, 0, 0.06);
        border-radius: 12px;
        padding: 1.25rem 1.25rem 1rem;
    }
    .area-group ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    .area-group li {
        margin-bottom: 0.45rem;
        color: var(--color-text);
    }
    @media (min-width: 768px) {
        .area-group ul {
            columns: 2;
            column-gap: 1.25rem;
        }
        .area-group li {
            break-inside: avoid;
        }
    }
    .contact-cta {
        margin-top: 4rem;
        padding-top: 2rem;
        border-top: 1px solid rgba(0, 0, 0, 0.1);
    }
    .contact-cta a {
        color: var(--color-primary);
        font-weight: 600;
        text-decoration: underline;
    }
</style>
