<BaseLayout title={title} description={description} canonical={canonical}>
    <main class="page-content">
        <div class="container skin-text">
            <h1>Areas We Serve in Western Australia</h1>

            <p class="intro">
                Amplify Creative Lab is a Perth-based photography and web design
                studio working across the Perth metropolitan area and Western
                Australia. We operate as a mobile studio, bringing our lighting,
                equipment and creative strategy directly to your venue.
            </p>

            <section class="coverage-policy">
                <h2>Coverage & Travel Policy</h2>
                <p>
                    Most projects are delivered on-location across the Perth
                    metro area, including food photography, product photography,
                    event coverage and website projects. Travel within the Perth
                    metro area is typically included. For Peel, the South West
                    and regional Western Australia, travel is available by
                    request and any travel fees are confirmed upfront.
                </p>
            </section>

            <section class="service-areas">
                <h2>Common Areas We Work In</h2>
                <div class="areas-grid">
                    {
                        areaGroups.map(({ title: groupTitle, suburbs }) => (
                            <div class="area-group">
                                <h3>{groupTitle}</h3>
                                <ul>
                                    {suburbs.map((suburb) => (
                                        <li>{suburb}</li>
                                    ))}
                                </ul>
                            </div>
                        ))
                    }
                </div>
            </section>

            <section class="contact-cta">
                <h2>Donâ€™t see your area?</h2>
                <p>
                    We likely still cover your location.{" "}
                    <a href="/contact/">Contact us</a> to discuss your project
                    and confirm availability.
                </p>
            </section>
        </div>
    </main>
</BaseLayout>

<style>
    .page-content {
        padding: 4rem 0;
    }
    .container {
