---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Page Not Found | Amplify Creative Lab";
const pageDescription =
  "The page you were looking for couldn’t be found. Browse photography and website services or return to the homepage.";
---

<BaseLayout title={pageTitle} description={pageDescription} noIndex={true}>
  <main class="page-404">
    <div class="notfound-hero">
      <div class="notfound-inner">
        <div class="notfound-content">
          <p class="notfound-kicker">404 — PAGE NOT FOUND</p>
          <h1 class="notfound-title">
            Looks like this page has left the table.
          </h1>
          <p class="notfound-text">
            The link you followed might be outdated, moved, or typed
            incorrectly. You can head back home, explore our photography and
            website services, or get in touch about a project in Perth.
          </p>

          <div class="notfound-actions">
            <a href="/" class="btn-primary">Back to homepage</a>
            <a href="/portfolio/" class="btn-ghost">View our portfolio</a>
            <a href="/contact/" class="btn-link">Contact us</a>
          </div>
        </div>
      </div>
    </div>
  </main>

  <style>
    .page-404 {
      min-height: 70vh;
      display: flex;
      align-items: center;
      padding: clamp(3rem, 6vw, 4.5rem) clamp(1.5rem, 5vw, 3rem);
      background-color: var(--color-bg, #fef8eb);
    }

    .notfound-hero {
      width: 100%;
    }

    .notfound-inner {
      max-width: 900px;
      margin: 0 auto;
    }

    .notfound-content {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .notfound-kicker {
      font-family: "Montserrat", system-ui, sans-serif;
      font-size: 0.8rem;
      letter-spacing: 0.18em;
      text-transform: uppercase;
      color: #7b5b33;
      margin: 0 0 0.5rem;
    }

    .notfound-title {
      font-family: var(--font-heading);
      font-size: clamp(2rem, 3.2vw, 2.6rem);
      color: var(--color-heading);
      margin: 0 0 0.75rem;
    }

    .notfound-text {
      font-family: var(--font-body);
      font-size: 1rem;
      line-height: 1.7;
      color: var(--color-text);
      max-width: 40rem;
      margin: 0 0 1.5rem;
    }

    .notfound-actions {
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
      margin-top: 0.5rem;
    }

    .btn-primary,
    .btn-ghost {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 0.75rem 1.6rem;
      border-radius: 999px;
      font-family: var(--font-body);
      font-size: 0.85rem;
      text-transform: uppercase;
      letter-spacing: 0.12em;
      text-decoration: none;
      transition:
        transform 0.12s ease,
        box-shadow 0.12s ease,
        background-color 0.12s ease,
        color 0.12s ease,
        border-color 0.12s ease;
      white-space: nowrap;
    }

    .btn-primary {
      background: var(--color-accent, #4a2e1c);
      color: #fff;
      border: 1px solid var(--color-accent, #4a2e1c);
      box-shadow: 0 10px 22px rgba(0, 0, 0, 0.16);
    }

    .btn-primary:hover {
      transform: translateY(-1px);
      box-shadow: 0 14px 30px rgba(0, 0, 0, 0.2);
    }

    .btn-ghost {
      background: transparent;
      color: var(--color-accent, #4a2e1c);
      border: 1px solid rgba(74, 46, 28, 0.35);
    }

    .btn-ghost:hover {
      background: rgba(74, 46, 28, 0.06);
      border-color: var(--color-accent, #4a2e1c);
      transform: translateY(-1px);
    }

    .btn-link {
      font-family: var(--font-body);
      font-size: 0.85rem;
      text-transform: uppercase;
      letter-spacing: 0.12em;
      text-decoration: underline;
      text-underline-offset: 0.18em;
    }

    @media (max-width: 768px) {
      .page-404 {
        padding-inline: var(--container-pad-mobile);
      }

      .notfound-actions {
        flex-direction: column;
        align-items: stretch;
      }

      .btn-primary,
      .btn-ghost {
        width: 100%;
        justify-content: center;
      }
    }
  </style>
</BaseLayout>
