    .section-header,
    .examples-header,
    .faq-header,
    .audience-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .section-label {
        display: inline-block;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        color: var(--c-accent);
        margin-bottom: 1rem;
        padding: 0.5rem 1rem;
        background: rgba(36, 54, 15, 0.08);
        border-radius: var(--radius-pill);
    }

    .section-header h2,
    .examples-header h2,
    .faq-header h2,
    .audience-header h2 {
        font-size: clamp(2.5rem, 5vw, 3.5rem);
        margin-bottom: 1rem;
    }

    .section-header p,
    .examples-header p {
        font-size: 1.125rem;
        color: var(--c-text);
        opacity: 0.85;
    }

    /* BUTTONS */
    .btn-primary {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        background-color: var(--c-accent);
        color: white;
        padding: 1rem 2rem;
        border-radius: var(--radius-sm);
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        transition: all var(--transition-base);
        box-shadow: 0 4px 16px rgba(36, 54, 15, 0.3);
        border: none;
        cursor: pointer;
    }

    .btn-primary:hover {
        background-color: var(--c-accent-hover);
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(36, 54, 15, 0.4);
    }

    .btn-primary .arrow-icon {
        width: 20px;
        height: 20px;
        transition: transform var(--transition-base);
    }

    .btn-primary:hover .arrow-icon {
        transform: translateX(4px);
    }

    .btn-primary.large {
        padding: 1.5rem 3rem;
        font-size: 1.125rem;
    }

    /* HERO SECTION */
    .hero {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        position: relative;
        padding-top: 2rem;
        overflow: hidden;
    }

    .hero-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            ellipse at top right,
            rgba(36, 54, 15, 0.08) 0%,
            transparent 50%
        );
        z-index: -1;
    }

    .hero-content-wrapper {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .hero-left {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .urgency-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1.5rem;
        background: rgba(197, 48, 48, 0.1);
        border: 1px solid rgba(197, 48, 48, 0.3);
        border-radius: var(--radius-pill);
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--c-error);
        width: fit-content;
    }

    .pulse-dot {
        width: 8px;
        height: 8px;
        background: var(--c-error);
        border-radius: 50%;
        animation: pulse 2s infinite;
    }

    .badge-text {
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .hero-title {
        font-size: clamp(3rem, 7vw, 5.5rem);
        line-height: 1;
        letter-spacing: -0.02em;
    }

    .title-line {
        display: block;
        opacity: 0.95;
    }

    .title-line.accent {
        color: var(--c-accent);
        margin: 0.5rem 0;
    }

    .zero-text {
        font-size: 1.2em;
        font-weight: 800;
        background: linear-gradient(135deg, var(--c-accent) 0%, #3d5a1f 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .slash {
        font-size: 0.6em;
        opacity: 0.6;
        margin: 0 0.1em;
        font-weight: 300;
    }

    .upfront {
        font-size: 0.5em;
        font-weight: 400;
        opacity: 0.8;
        font-family: var(--font-body);
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .hero-subtitle {
        font-size: 1.25rem;
        max-width: 500px;
        color: var(--c-text);
        opacity: 0.9;
    }

    .highlight {
        background: linear-gradient(
            120deg,
            rgba(36, 54, 15, 0.15) 0%,
            rgba(36, 54, 15, 0.15) 100%
        );
        background-repeat: no-repeat;
        background-size: 100% 40%;
        background-position: 0 88%;
        font-weight: 700;
        color: var(--c-accent);
    }

    .hero-cta-group {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .trust-indicators {
        display: flex;
        gap: 2rem;
        flex-wrap: wrap;
    }

    .trust-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: var(--c-text);
        opacity: 0.8;
    }

    .trust-item .check-icon {
        width: 18px;
        height: 18px;
        color: var(--c-success);
    }

    .hero-right {
        position: relative;
    }

    .hero-visual {
        position: relative;
        perspective: 1000px;
    }

    .visual-card {
        background: white;
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-xl);
        transform: rotateY(-5deg) rotateX(2deg);
        transition: transform var(--transition-slow);
    }

    .visual-card:hover {
        transform: rotateY(0deg) rotateX(0deg);
    }

    .browser-mockup {
        border-radius: var(--radius-lg);
        overflow: hidden;
        background: #f5f5f5;
    }

    .browser-header {
        display: flex;
        gap: 8px;
        padding: 1rem;
        background: #e5e5e5;
    }

    .browser-header .dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }

    .browser-header .dot.red {
        background: #ff5f57;
    }

    .browser-header .dot.yellow {
        background: #febc2e;
    }

    .browser-header .dot.green {
        background: #28c840;
    }

    .browser-content {
        position: relative;
        height: 350px;
        overflow: hidden;
    }

    .hero-preview {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: top;
    }

    .scroll-indicator {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        color: var(--c-text);
        opacity: 0.6;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .scroll-arrow {
        width: 24px;
        height: 24px;
        animation: bounce 2s infinite;
    }

    /* PROCESS SECTION */
    .process {
        background: var(--c-surface-alt);
    }

    .steps-wrapper {
        max-width: 1200px;
        margin: 0 auto;
    }

    .steps-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
    }

    .step-card {
        background: white;
        padding: 2.5rem;
        border-radius: var(--radius-md);
        box-shadow: var(--shadow-sm);
        transition: all var(--transition-base);
        border: 1px solid var(--c-border);
        position: relative;
        overflow: hidden;
    }

    .step-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: linear-gradient(90deg, var(--c-accent), var(--c-success));
        transform: scaleX(0);
        transform-origin: left;
        transition: transform var(--transition-base);
    }

    .step-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-lg);
    }

    .step-card:hover::before {
        transform: scaleX(1);
    }

    .step-visual {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .step-number {
        font-family: var(--font-heading);
        font-size: 3rem;
        color: var(--c-border);
        line-height: 1;
        opacity: 0.5;
    }

    .step-icon {
        width: 48px;
        height: 48px;
        background: rgba(36, 54, 15, 0.1);
        border-radius: var(--radius-sm);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--c-accent);
    }

    .step-icon svg {
        width: 24px;
        height: 24px;
    }

    .step-card h3 {
        font-size: 1.5rem;
        margin-bottom: 0.75rem;
        font-family: var(--font-body);
        font-weight: 700;
    }

    .step-card p {
        color: var(--c-text);
        opacity: 0.85;
        font-size: 0.95rem;
    }

    /* VALUE STACK SECTION */
    .value-stack {
        background: var(--c-heading);
        color: white;
        position: relative;
        max-width: 100%;
        padding: 8rem 1.5rem;
        overflow: hidden;
    }

    .value-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            ellipse at bottom left,
            rgba(36, 54, 15, 0.3) 0%,
            transparent 50%
        );
        z-index: 0;
    }

    .value-content {
        position: relative;
        z-index: 1;
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: start;
    }

    .value-header {
        padding-right: 2rem;
    }

    .value-label {
        display: inline-block;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 1rem;
        padding: 0.5rem 1rem;
        background: rgba(255, 255, 255, 0.1);
        border-radius: var(--radius-pill);
    }

    .value-header h2 {
        color: white;
        font-size: clamp(2.5rem, 4vw, 3.5rem);
        margin-bottom: 1.5rem;
        line-height: 1.1;
    }

    .value-header p {
        color: rgba(255, 255, 255, 0.8);
        font-size: 1.125rem;
        line-height: 1.8;
    }

    .pricing-showcase {
        background: white;
        color: var(--c-text);
        padding: 2.5rem;
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-xl);
    }

    .price-display {
        text-align: center;
        padding-bottom: 2rem;
        border-bottom: 1px solid var(--c-border);
        margin-bottom: 2rem;
    }

    .price-main {
        display: flex;
        align-items: baseline;
        justify-content: center;
        gap: 0.25rem;
        margin-bottom: 0.5rem;
    }

    .currency {
        font-size: 2rem;
        font-weight: 600;
        color: var(--c-accent);
    }

    .amount {
        font-size: 5rem;
        font-weight: 800;
        font-family: var(--font-heading);
        color: var(--c-heading);
        line-height: 1;
    }

    .period {
        font-size: 1.25rem;
        color: var(--c-text);
        opacity: 0.7;
    }

    .price-tagline {
        font-size: 0.875rem;
        color: var(--c-text);
        opacity: 0.7;
        font-weight: 500;
    }

    .features-grid {
        display: grid;
        gap: 1.25rem;
        margin-bottom: 2rem;
    }

    .feature-item {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        padding: 1rem;
        border-radius: var(--radius-sm);
        transition: background var(--transition-fast);
    }

    .feature-item:hover {
        background: var(--c-surface-alt);
    }

    .feature-icon {
        width: 24px;
        height: 24px;
        background: rgba(45, 90, 39, 0.15);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--c-success);
        flex-shrink: 0;
        margin-top: 2px;
    }

    .feature-icon svg {
        width: 14px;
        height: 14px;
    }

    .feature-content {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .feature-content strong {
        font-size: 0.95rem;
        color: var(--c-heading);
        font-weight: 600;
    }

    .feature-content span {
        font-size: 0.85rem;
        color: var(--c-text);
        opacity: 0.75;
    }

    .price-note {
        text-align: center;
        font-size: 0.75rem;
        color: var(--c-text);
        opacity: 0.6;
        padding-top: 1.5rem;
        border-top: 1px solid var(--c-border);
    }

    /* AUDIENCE SECTION */
    .audience {
        background: var(--c-surface-alt);
    }

    .audience-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
        max-width: 1000px;
        margin: 0 auto;
    }

    .audience-card {
        background: white;
        padding: 2.5rem;
        border-radius: var(--radius-md);
        box-shadow: var(--shadow-sm);
        transition: all var(--transition-base);
    }

    .audience-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-md);
    }

    .audience-card.perfect-fit {
        border-left: 4px solid var(--c-success);
    }

    .audience-card.not-fit {
        border-left: 4px solid var(--c-error);
    }

    .card-icon {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
    }

    .perfect-fit .card-icon {
        background: rgba(45, 90, 39, 0.15);
        color: var(--c-success);
    }

    .not-fit .card-icon {
        background: rgba(197, 48, 48, 0.15);
        color: var(--c-error);
    }

    .card-icon svg {
        width: 24px;
        height: 24px;
    }

    .audience-card h3 {
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        font-family: var(--font-body);
        font-weight: 700;
    }

    .audience-card ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .audience-card li {
        padding: 0.75rem 0;
        color: var(--c-text);
        opacity: 0.85;
        font-size: 0.95rem;
        border-bottom: 1px solid var(--c-border);
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
    }

    .audience-card li:last-child {
        border-bottom: none;
    }

    /* EXAMPLES SECTION */
    .examples {
        background: var(--c-bg);
        padding: 8rem 1.5rem;
    }

    .examples-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 3rem;
        max-width: 1200px;
        margin: 4rem auto 0;
    }

    .example-card {
        background: white;
        border-radius: var(--radius-lg);
        overflow: hidden;
        box-shadow: var(--shadow-md);
        transition: all var(--transition-base);
    }

    .example-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-xl);
    }

    .example-browser {
        position: relative;
        overflow: hidden;
    }

    .browser-dots {
        display: flex;
        gap: 8px;
        padding: 1rem;
        background: #f5f5f5;
        border-bottom: 1px solid var(--c-border);
    }

    .browser-dots .dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }

    .browser-dots .dot.red {
        background: #ff5f57;
    }

    .browser-dots .dot.yellow {
        background: #febc2e;
    }

    .browser-dots .dot.green {
        background: #28c840;
    }

    .example-image {
        height: 300px;
        overflow: hidden;
        position: relative;
        background: #f5f5f5;
    }

    .site-thumb {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: top;
        transition: transform var(--transition-slow);
    }

    .example-card:hover .site-thumb {
        transform: scale(1.05);
    }

    .example-caption {
        padding: 1.5rem;
        border-top: 1px solid var(--c-border);
    }

    .example-caption h3 {
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        font-family: var(--font-body);
        font-weight: 700;
    }

    .example-caption p {
        font-size: 0.875rem;
        color: var(--c-text);
        opacity: 0.7;
    }

    /* FAQ SECTION */
    .faq {
        background: var(--c-surface-alt);
    }

    .faq-list {
        max-width: 800px;
        margin: 0 auto;
    }

    .faq-item {
        background: white;
        border-radius: var(--radius-sm);
        margin-bottom: 1rem;
        overflow: hidden;
        box-shadow: var(--shadow-sm);
        transition: all var(--transition-base);
    }

    .faq-item:hover {
        box-shadow: var(--shadow-md);
    }

    .faq-item summary {
        padding: 1.5rem;
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;
        list-style: none;
        font-weight: 600;
        font-size: 1.125rem;
        color: var(--c-heading);
        transition: background var(--transition-fast);
    }

    .faq-item summary:hover {
        background: var(--c-surface-alt);
    }

    .faq-icon {
        width: 24px;
        height: 24px;
        transition: transform var(--transition-base);
        flex-shrink: 0;
    }

    .faq-item[open] .faq-icon {
        transform: rotate(45deg);
    }

    .faq-answer {
        padding: 0 1.5rem 1.5rem;
        color: var(--c-text);
        opacity: 0.85;
        line-height: 1.8;
        animation: slideDown 0.3s ease;
    }

    /* FINAL CTA */
    .final-cta {
        position: relative;
        text-align: center;
        padding: 10rem 1.5rem;
        overflow: hidden;
    }

    .cta-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            135deg,
            var(--c-heading) 0%,
            var(--c-accent) 100%
        );
        z-index: 0;
    }

    .cta-background::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            ellipse at top,
            rgba(255, 255, 255, 0.1) 0%,
            transparent 50%
        );
    }

    .cta-content {
        position: relative;
        z-index: 1;
        max-width: 700px;
        margin: 0 auto;
    }

    .urgency-banner {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1.5rem;
        background: rgba(197, 48, 48, 0.2);
        border: 1px solid rgba(197, 48, 48, 0.4);
        border-radius: var(--radius-pill);
        font-size: 0.875rem;
        font-weight: 600;
        color: rgba(255, 255, 255, 0.9);
        margin-bottom: 2rem;
    }

    .urgency-dot {
        width: 8px;
        height: 8px;
        background: var(--c-error);
        border-radius: 50%;
        animation: pulse 2s infinite;
    }

    .urgency-text {
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .final-cta h2 {
        color: white;
        font-size: clamp(2.5rem, 5vw, 4rem);
        margin-bottom: 1.5rem;
    }

    .final-cta > .cta-content > p {
        color: rgba(255, 255, 255, 0.9);
        font-size: 1.25rem;
        margin-bottom: 2.5rem;
    }

    .cta-note {
        margin-top: 2rem;
        font-size: 0.875rem;
        color: rgba(255, 255, 255, 0.7);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    /* ANIMATIONS */
    @keyframes pulse {
        0%,
        100% {
            transform: scale(1);
            opacity: 1;
        }
        50% {
            transform: scale(1.2);
            opacity: 0.7;
        }
    }

    @keyframes bounce {
        0%,
        20%,
        50%,
        80%,
        100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(-10px);
        }
        60% {
            transform: translateY(-5px);
        }
    }

    @keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* SCROLL ANIMATIONS */
    .animate-on-scroll {
        opacity: 0;
        transform: translateY(30px);
        transition:
            opacity 0.6s ease,
            transform 0.6s ease;
    }

    .animate-on-scroll.visible {
        opacity: 1;
        transform: translateY(0);
    }

    /* RESPONSIVE */
    @media (max-width: 1024px) {
        .hero-content-wrapper {
            grid-template-columns: 1fr;
            gap: 3rem;
        }

        .hero-right {
            order: -1;
        }

        .value-content {
            grid-template-columns: 1fr;
            gap: 3rem;
        }

        .value-header {
            padding-right: 0;
            text-align: center;
        }

        .steps-grid {
            grid-template-columns: 1fr;
        }

        .examples-grid {
            grid-template-columns: 1fr;
        }

        .audience-grid {
            grid-template-columns: 1fr;
        }
    }

    @media (max-width: 768px) {
        section {
            padding: 4rem 1rem;
        }

        .hero-title {
            font-size: 2.5rem;
        }

        .zero-text {
            font-size: 1em;
        }

        .trust-indicators {
            flex-direction: column;
            gap: 0.75rem;
        }

        .browser-content {
            height: 400px;
        }

        .amount {
            font-size: 3.5rem;
        }

        .section-header h2,
        .examples-header h2,
        .faq-header h2 {
            font-size: 2rem;
        }
    }

    @media (max-width: 480px) {
        .btn-primary {
            width: 100%;
