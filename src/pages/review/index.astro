---
import { Image } from 'astro:assets';
import candidPartyLaughterChampagne from '../../assets/images/portfolio/event/candid-party-laughter-champagne.webp';
import BaseLayout from "../../layouts/BaseLayout.astro";

const pageTitle = "Leave Us a Review | Amplify Creative Lab Perth";
const pageDescription =
    "Loved working with us? Share your experience! Your feedback helps other Perth businesses find quality photography and web design services.";

// Google Place ID for review link - update this with your actual Place ID
const googleReviewUrl =
    "https://search.google.com/local/writereview?placeid=ChIJHfjae113B4ERu5hAgY2Nfms";
---

<BaseLayout title={pageTitle} description={pageDescription} noIndex={true}>
    <main class="review-page">
        <div class="review-hero">
            <div class="review-hero__background">
                <Image
                    src={candidPartyLaughterChampagne}
                    alt=""
                    class="review-hero__image"
                    loading="eager"
                    format="webp"
                    widths={[800, 1200, 1600]}
                    sizes="100vw"
                />
                <div class="review-hero__overlay"></div>
                <div class="review-hero__grain"></div>
            </div>
            
            <div class="review-hero__inner">
                <div class="review-hero__kicker-wrapper">
                    <span class="review-hero__line"></span>
                    <p class="review-hero__kicker">THANK YOU FOR CHOOSING US</p>
                    <span class="review-hero__line"></span>
                </div>

                <h1 class="review-hero__title">We'd Love Your Feedback</h1>

                <p class="review-hero__lead">
                    Your words help other Perth businesses discover what we do.
                    If you had a great experience working with us, we'd be
                    grateful if you could take a moment to share it.
                </p>

                <!-- Social Proof Counter -->
                <div class="review-social-proof">
                    <div class="review-social-proof__stars">
                        <svg class="review-social-proof__star" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                        </svg>
                        <svg class="review-social-proof__star" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                        </svg>
                        <svg class="review-social-proof__star" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                        </svg>
                        <svg class="review-social-proof__star" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                        </svg>
                        <svg class="review-social-proof__star" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                        </svg>
                    </div>
                    <p class="review-social-proof__text">Join other Perth businesses who've shared their experience</p>
                </div>

                <div class="review-reward">
                    <div class="review-reward__ribbon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                        </svg>
                    </div>
                    <div class="review-reward__content">
                        <p class="review-reward__label">
                            Our Thank You Gift
                        </p>
                        <p class="review-reward__title">
                            Get <mark class="review-reward__highlight">$100 OFF</mark> Your Next Service
                        </p>
                        <p class="review-reward__desc">
                            Leave a review today and receive a $100 credit
                            towards your next booking with us.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <section class="review-options">
            <div class="review-options__inner">
                <div class="review-card review-card--google">
                    <div class="review-card__icon">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="48"
                            height="48"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                            aria-hidden="true"
                        >
                            <path
                                d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                            ></path>
                            <path
                                d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                            ></path>
                            <path
                                d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                            ></path>
                            <path
                                d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                            ></path>
                        </svg>
                    </div>
                    <h2 class="review-card__title">Review on Google</h2>
                    <p class="review-card__text">
                        The most impactful place to leave a review. Google
                        reviews help us appear in local searches and the Map
                        Pack.
                    </p>
                    <p class="review-card__value">Boosts our local search visibility</p>
                    <a
                        href={googleReviewUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="review-card__button"
                        aria-label="Leave a review on Google - opens in new tab"
                    >
                        Leave a Google Review →
                    </a>
                </div>

                <div class="review-card review-card--facebook">
                    <div class="review-card__icon">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="48"
                            height="48"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                            aria-hidden="true"
                        >
                            <path
                                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                            ></path>
                        </svg>
                    </div>
                    <h2 class="review-card__title">Review on Facebook</h2>
                    <p class="review-card__text">
                        Share your experience with our Facebook community
                        and help fellow Perth business owners.
                    </p>
                    <p class="review-card__value">Shares your experience with your network</p>
                    <a
                        href="https://www.facebook.com/amplifycreativelab/reviews"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="review-card__button"
                        aria-label="Leave a review on Facebook - opens in new tab"
                    >
                        Leave a Facebook Review →
                    </a>
                </div>
            </div>
        </section>

        <section class="review-tips">
            <div class="review-tips__quote" aria-hidden="true">"</div>
            <div class="review-tips__inner">
                <div class="review-tips__content">
                    <h2 class="review-tips__title">
                        What to Include in Your Review
                    </h2>
                    <p class="review-tips__intro">
                        Not sure what to write? Here are some prompts to
                        help:
                    </p>
                    <div class="review-tips__pro-tip">
                        <svg class="review-tips__pro-tip-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"/>
                        </svg>
                        <p class="review-tips__pro-tip-text">Pro Tip: Be specific! Details about your project make your review more helpful to others.</p>
                    </div>
                </div>
                <ul class="review-tips__list">
                    <li>
                        <svg class="review-tips__icon review-tips__icon--camera" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                        </svg>
                        <span>What service did we provide? (photography, web design, both?)</span>
                    </li>
                    <li>
                        <svg class="review-tips__icon review-tips__icon--heart" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                        </svg>
                        <span>What was your favourite part of working with us?</span>
                    </li>
                    <li>
                        <svg class="review-tips__icon review-tips__icon--star" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                            <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                        </svg>
                        <span>How has the work impacted your business?</span>
                    </li>
                    <li>
                        <svg class="review-tips__icon review-tips__icon--check" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                            <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                        </svg>
                        <span>Would you recommend us to other Perth businesses?</span>
                    </li>
                </ul>
            </div>
        </section>

        <section class="review-cta">
            <div class="review-cta__inner">
                <h2 class="review-cta__title">
                    Have Feedback You'd Rather Share Privately?
                </h2>
                <p class="review-cta__text">
                    We're always looking to improve. If you have suggestions
                    or concerns, we'd love to hear from you directly.
                </p>
                <a href="/contact/" class="review-cta__button">
                    Contact Us Directly
                </a>
            </div>
        </section>
    </main>

    <style>
        :root {
            /* Brand Colors */
            --color-dark-green: #152705;
            --color-cream: #fef8eb;
            --color-gold: #7b5b33;
            --color-gold-light: #d4c5a5;
            --color-brown: #3e2b22;
            --color-beige: #e8d8c3;
            --color-sage: #55624a;
            --color-warm-gray: #7a6753;
            
            /* Spacing Scale */
            --space-xs: 0.5rem;
            --space-sm: 1rem;
            --space-md: 1.5rem;
            --space-lg: 2rem;
            --space-xl: 3rem;
            --space-2xl: 4rem;
            --space-3xl: 6rem;
            
            /* Border Radius */
            --radius-sm: 6px;
            --radius-md: 12px;
            --radius-lg: 16px;
            
            /* Transitions */
            --transition-fast: 0.2s ease;
            --transition-base: 0.3s ease;
            --transition-smooth: 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
        }

        .review-page {
            background-color: var(--color-cream);
            font-family: "Darker Grotesque", sans-serif;
        }

        /* Skip Link for Accessibility */
        .review-page::before {
            content: "";
            position: absolute;
            top: -100%;
            left: 0;
            right: 0;
            background: var(--color-dark-green);
            color: var(--color-cream);
            padding: var(--space-sm);
            text-align: center;
            z-index: 9999;
            transition: top var(--transition-base);
        }

        .review-page:focus-within::before {
            top: 0;
        }

        /* Hero Section */
        .review-hero {
            position: relative;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            overflow: hidden;
            color: var(--color-cream);
        }

        .review-hero__background {
            position: absolute;
            inset: 0;
            z-index: 0;
        }

        .review-hero__image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center 30%;
        }

        .review-hero__overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(
                135deg,
                rgba(21, 39, 5, 0.85) 0%,
                rgba(21, 39, 5, 0.75) 50%,
                rgba(21, 39, 5, 0.85) 100%
            );
        }

        .review-hero__grain {
            position: absolute;
            inset: 0;
            opacity: 0.03;
            background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
            pointer-events: none;
        }

        .review-hero__inner {
            position: relative;
            max-width: 800px;
            margin: 0 auto;
            padding: var(--space-3xl) var(--space-lg);
            z-index: 1;
            animation: fadeInUp 0.8s ease-out;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .review-hero__kicker-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: var(--space-md);
            margin-bottom: var(--space-xl);
        }

        .review-hero__line {
            width: 60px;
            height: 1px;
            background-color: rgba(254, 248, 235, 0.4);
        }

        .review-hero__kicker {
            font-family: "Montserrat", sans-serif;
            font-size: 0.8rem;
            letter-spacing: 0.2em;
            text-transform: uppercase;
            color: rgba(254, 248, 235, 0.9);
            margin: 0;
            font-weight: 600;
        }

        .review-hero__title {
            font-family: "Montserrat", sans-serif;
            font-size: clamp(2.5rem, 6vw, 4.5rem);
            line-height: 1.1;
            margin: 0 0 var(--space-xl);
            color: var(--color-cream);
            font-weight: 700;
        }

        .review-hero__lead {
            font-family: "Darker Grotesque", sans-serif;
            font-size: clamp(1.1rem, 2vw, 1.4rem);
            line-height: 1.5;
            opacity: 0.95;
            max-width: 600px;
            margin: 0 auto var(--space-2xl);
            color: var(--color-cream);
        }

        /* Social Proof */
        .review-social-proof {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: var(--space-sm);
            margin-bottom: var(--space-2xl);
            padding: var(--space-md) var(--space-lg);
            background: rgba(254, 248, 235, 0.1);
            border-radius: var(--radius-lg);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(254, 248, 235, 0.15);
        }

        .review-social-proof__stars {
            display: flex;
            gap: 0.25rem;
        }

        .review-social-proof__star {
            width: 24px;
            height: 24px;
            color: var(--color-gold-light);
        }

        .review-social-proof__text {
            font-family: "Montserrat", sans-serif;
            font-size: 1rem;
            color: var(--color-cream);
            margin: 0;
        }

        .review-social-proof__text strong {
            color: var(--color-gold-light);
            font-weight: 700;
        }

        /* Reward Box - Gift Card Style */
        .review-reward {
            position: relative;
            display: inline-flex;
            align-items: flex-start;
            gap: var(--space-lg);
            background: linear-gradient(135deg, rgba(254, 248, 235, 0.95) 0%, rgba(254, 248, 235, 0.9) 100%);
            border: 2px solid var(--color-gold);
            padding: var(--space-lg) var(--space-xl);
            border-radius: var(--radius-lg);
            text-align: left;
            min-width: 560px;
            max-width: 600px;
            margin: 0 auto;
            box-shadow: 
                0 20px 60px rgba(0, 0, 0, 0.3),
                0 0 0 1px rgba(123, 91, 51, 0.1),
                inset 0 1px 0 rgba(255, 255, 255, 0.6);
            transition: transform var(--transition-base), box-shadow var(--transition-base);
        }

        .review-reward::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(
                135deg,
                transparent 0%,
                rgba(212, 197, 165, 0.1) 50%,
                transparent 100%
            );
            pointer-events: none;
            border-radius: var(--radius-lg);
        }

        .review-reward:hover {
            transform: translateY(-4px);
            box-shadow: 
                0 25px 70px rgba(0, 0, 0, 0.35),
                0 0 0 1px rgba(123, 91, 51, 0.2),
                inset 0 1px 0 rgba(255, 255, 255, 0.6);
        }

        .review-reward__ribbon {
            flex-shrink: 0;
            width: 56px;
            height: 56px;
            background: linear-gradient(135deg, var(--color-gold) 0%, #9a7b4a 100%);
            color: var(--color-cream);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 12px rgba(123, 91, 51, 0.4);
        }

        .review-reward__ribbon svg {
            width: 28px;
            height: 28px;
        }

        .review-reward__content {
            display: flex;
            flex-direction: column;
            gap: var(--space-xs);
        }

        .review-reward__label {
            font-family: "Montserrat", sans-serif;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.15em;
            color: var(--color-gold);
            margin: 0;
            font-weight: 700;
        }

        .review-reward__title {
            font-family: "Abril Fatface", serif;
            font-size: 1.5rem;
            color: var(--color-dark-green);
            margin: 0;
            line-height: 1.2;
            white-space: nowrap;
        }

        .review-reward__highlight {
            background: linear-gradient(135deg, var(--color-gold) 0%, #9a7b4a 100%);
            color: var(--color-cream);
            padding: 0.1em 0.3em;
            border-radius: 3px;
            font-weight: 700;
        }

        .review-reward__desc {
            font-family: "Darker Grotesque", sans-serif;
            font-size: 1.1rem;
            color: var(--color-brown);
            margin: var(--space-xs) 0 0;
            line-height: 1.4;
        }

        /* Review Options */
        .review-options {
            padding: clamp(var(--space-2xl), 8vw, var(--space-3xl)) 0;
            content-visibility: auto;
            contain-intrinsic-size: 600px;
        }

        .review-options__inner {
            max-width: 1000px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: var(--space-xl);
            padding: 0 var(--space-lg);
        }

        .review-card {
            background: var(--color-cream);
            border: 1px solid rgba(212, 197, 165, 0.4);
            border-radius: var(--radius-lg);
            padding: var(--space-2xl) var(--space-lg);
            text-align: center;
            transition: all var(--transition-smooth);
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            align-items: center;
            height: 100%;
        }

        .review-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(
                135deg,
                transparent 0%,
                rgba(21, 39, 5, 0.02) 100%
            );
            pointer-events: none;
        }

        .review-card::after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, var(--color-gold) 0%, #9a7b4a 100%);
            transform: scaleX(0);
            transform-origin: left;
            transition: transform var(--transition-base);
        }

        .review-card:hover::after {
            transform: scaleX(1);
        }

        .review-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 20px 50px rgba(21, 39, 5, 0.12);
            border-color: var(--color-gold-light);
        }

        .review-card:focus-within {
            outline: 3px solid var(--color-gold);
            outline-offset: 2px;
        }

        .review-card__icon {
            width: 80px;
            height: 80px;
            margin: 0 auto var(--space-lg);
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            background: linear-gradient(135deg, rgba(254, 248, 235, 0.8) 0%, rgba(254, 248, 235, 0.6) 100%);
            border: 2px solid rgba(123, 91, 51, 0.2);
            color: var(--color-gold);
            transition: all var(--transition-base);
        }

        .review-card:hover .review-card__icon {
            transform: scale(1.05);
            background: linear-gradient(135deg, var(--color-gold) 0%, #9a7b4a 100%);
            border-color: var(--color-gold);
            color: var(--color-cream);
        }

        .review-card__title {
            font-family: "Abril Fatface", serif;
            font-size: 1.9rem;
            color: var(--color-warm-gray);
            margin: 0 0 var(--space-sm);
        }

        .review-card__text {
            font-family: "Darker Grotesque", sans-serif;
            font-size: 1.2rem;
            color: var(--color-sage);
            line-height: 1.5;
            margin: 0 0 var(--space-sm);
            flex-grow: 1;
        }

        .review-card__value {
            font-family: "Montserrat", sans-serif;
            font-size: 0.85rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: var(--color-gold);
