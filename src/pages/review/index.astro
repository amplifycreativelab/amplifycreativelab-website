---
import BaseLayout from "../../layouts/BaseLayout.astro";

const pageTitle = "Leave Us a Review | Amplify Creative Lab Perth";
const pageDescription =
    "Loved working with us? Share your experience! Your feedback helps other Perth businesses find quality photography and web design services.";

// Google Place ID for review link - update this with your actual Place ID
const googleReviewUrl =
    "https://search.google.com/local/writereview?placeid=ChIJHfjae113B4ERu5hAgY2Nfms";
---

<BaseLayout title={pageTitle} description={pageDescription} noIndex={true}>
    <main class="review-page">
        <section class="review-hero">
            <div class="review-hero__inner">
                <div class="review-hero__kicker-wrapper">
                    <span class="review-hero__line"></span>
                    <p class="review-hero__kicker">THANK YOU FOR CHOOSING US</p>
                </div>

                <h1 class="review-hero__title">We'd Love Your Feedback</h1>

                <p class="review-hero__lead">
                    Your words help other Perth businesses discover what we do.
                    If you had a great experience working with us, we'd be
                    grateful if you could take a moment to share it.
                </p>
            </div>
        </section>

        <section class="review-options">
            <div class="review-options__inner">
                <div class="review-card review-card--google">
                    <div class="review-card__icon">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="48"
                            height="48"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                        >
                            <path
                                d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                            ></path>
                            <path
                                d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                            ></path>
                            <path
                                d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                            ></path>
                            <path
                                d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                            ></path>
                        </svg>
                    </div>
                    <h2 class="review-card__title">Review on Google</h2>
                    <p class="review-card__text">
                        The most impactful place to leave a review. Google
                        reviews help us appear in local searches and the Map
                        Pack.
                    </p>
                    <a
                        href={googleReviewUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="review-card__button"
                    >
                        Leave a Google Review →
                    </a>
                </div>

                <div class="review-card review-card--facebook">
                    <div class="review-card__icon">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="48"
                            height="48"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                        >
                            <path
                                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                            ></path>
                        </svg>
                    </div>
                    <h2 class="review-card__title">Review on Facebook</h2>
                    <p class="review-card__text">
                        Share your experience with our Facebook community and
                        help fellow Perth business owners.
                    </p>
                    <a
                        href="https://www.facebook.com/amplifycreativelab/reviews"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="review-card__button"
                    >
                        Leave a Facebook Review →
                    </a>
                </div>
            </div>
        </section>

        <section class="review-tips">
            <div class="review-tips__inner">
                <h2 class="review-tips__title">
                    What to Include in Your Review
                </h2>
                <p class="review-tips__intro">
                    Not sure what to write? Here are some prompts to help:
                </p>
                <ul class="review-tips__list">
                    <li>
                        What service did we provide? (photography, web design,
                        both?)
                    </li>
                    <li>What was your favourite part of working with us?</li>
                    <li>How has the work impacted your business?</li>
                    <li>Would you recommend us to other Perth businesses?</li>
                </ul>
            </div>
        </section>

        <section class="review-cta">
            <div class="review-cta__inner">
                <h2 class="review-cta__title">
                    Have Feedback You'd Rather Share Privately?
                </h2>
                <p class="review-cta__text">
                    We're always looking to improve. If you have suggestions or
                    concerns, we'd love to hear from you directly.
                </p>
                <a href="/contact/" class="review-cta__button">
                    Contact Us Directly
                </a>
            </div>
        </section>
    </main>
</BaseLayout>

<style>
    .review-page {
        background-color: #fef8eb;
    }

    /* Hero Section */
    .review-hero {
        position: relative;
        background-color: #152705;
        color: #fef8eb;
        padding: clamp(6rem, 15vh, 10rem) clamp(1.5rem, 6vw, 4rem);
        text-align: center;
        overflow: hidden;
    }

    /* Abstract background element to mimic the site's rich feel */
    .review-hero::before {
        content: "";
        position: absolute;
        top: -50%;
        left: 50%;
        transform: translateX(-50%);
        width: 120%;
        height: 200%;
        background: radial-gradient(
            circle,
            rgba(48, 69, 23, 0.4) 0%,
            rgba(21, 39, 5, 0) 70%
        );
        pointer-events: none;
    }

    .review-hero__inner {
        position: relative;
        max-width: 800px;
        margin: 0 auto;
        z-index: 1;
    }

    .review-hero__kicker-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 20px;
        margin-bottom: 2rem;
    }

    .review-hero__line {
        width: 60px;
        height: 1px;
        background-color: rgba(254, 248, 235, 0.3);
    }

    .review-hero__kicker {
        font-family: "Montserrat", sans-serif;
        font-size: 0.8rem;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        color: rgba(254, 248, 235, 0.8);
        margin: 0;
        font-weight: 500;
    }

    .review-hero__title {
        font-family: "Abril Fatface", serif;
        font-size: clamp(3rem, 7vw, 5rem);
        line-height: 1.05;
        margin: 0 0 2rem;
        color: #fef8eb;
    }

    .review-hero__lead {
        font-family: "Darker Grotesque", sans-serif;
        font-size: clamp(1.2rem, 2vw, 1.5rem);
        line-height: 1.4;
        opacity: 0.9;
        max-width: 600px;
        margin: 0 auto;
        color: #e3d4b4;
    }

    /* Review Options */
    .review-options {
        padding: clamp(4rem, 8vw, 6rem) clamp(1.5rem, 4vw, 3rem);
    }

    .review-options__inner {
        max-width: 1000px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
    }

    .review-card {
        background: #fff;
        border: 1px solid #e3d4b4;
        border-radius: 8px;
        padding: 3rem 2rem;
        text-align: center;
        transition: all 0.3s ease;
    }

    .review-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 40px rgba(21, 39, 5, 0.08);
        border-color: #d4c5a5;
    }

    .review-card__icon {
        width: 70px;
        height: 70px;
        margin: 0 auto 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background: #fffaf1;
        color: #152705;
        transition: all 0.3s ease;
    }

    .review-card:hover .review-card__icon {
        transform: scale(1.1);
        background: #152705;
        color: #fffaf1;
    }

    .review-card--google .review-card__icon svg,
    .review-card--facebook .review-card__icon svg {
        /* Reset icon color inheritance for specific icons if needed, or leave to inherit */
    }

    .review-card__title {
        font-family: "Abril Fatface", serif; /* Changed to match headings */
        font-size: 1.8rem;
        color: #152705;
        margin: 0 0 1rem;
    }

    .review-card__text {
        font-family: "Darker Grotesque", sans-serif;
        font-size: 1.25rem;
        color: #55624a;
        line-height: 1.4;
        margin: 0 0 2rem;
    }

    .review-card__button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 1rem 2rem;
        border-radius: 6px;
        font-family: "Montserrat", sans-serif;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        text-decoration: none;
        transition: all 0.3s ease;
        background: #152705;
        color: #fef8eb;
        border: 1px solid #152705;
    }

    .review-card__button:hover {
        background: #2a4410;
        border-color: #2a4410;
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(21, 39, 5, 0.2);
    }

    /* Google/Facebook specific hover tweaks if needed, 
       but keeping them uniform is cleaner for the brand */
    .review-card--google .review-card__button,
    .review-card--facebook .review-card__button {
        /* Intentionally standardizing to brand theme */
    }

    /* Review Tips */
    .review-tips {
        background: #fffaf1; /* Lighter cream */
        padding: clamp(4rem, 8vw, 6rem) clamp(1.5rem, 4vw, 3rem);
        border-top: 1px solid #e3d4b4;
        border-bottom: 1px solid #e3d4b4;
    }

    .review-tips__inner {
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
    }

    .review-tips__title {
        font-family: "Abril Fatface", serif;
        font-size: 2.2rem;
        color: #152705;
        margin: 0 0 1rem;
    }

    .review-tips__intro {
        font-family: "Darker Grotesque", sans-serif;
        font-size: 1.4rem;
        color: #55624a;
        margin: 0 0 2.5rem;
    }

    .review-tips__list {
        text-align: left;
        max-width: 600px;
        margin: 0 auto;
        display: grid;
        gap: 1.5rem;
        padding: 0;
        list-style: none;
    }

    .review-tips__list li {
        display: flex;
        gap: 1rem;
        font-family: "Darker Grotesque", sans-serif;
        font-size: 1.3rem;
        color: #24360f;
        line-height: 1.4;
        align-items: flex-start;
    }

    .review-tips__list li::before {
        content: "•";
        color: #7b5b33;
        font-size: 1.5rem;
        line-height: 1;
    }

    /* CTA Section */
    .review-cta {
        padding: clamp(4rem, 8vw, 6rem) clamp(1.5rem, 4vw, 3rem);
    }

    .review-cta__inner {
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
        padding: 4rem 2rem;
        background: #152705;
        border-radius: 12px;
        color: #fef8eb;
        position: relative;
        overflow: hidden;
    }

    .review-cta__inner::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(
            circle at top right,
            rgba(255, 255, 255, 0.05),
            transparent 60%
        );
        pointer-events: none;
    }

    .review-cta__title {
        font-family: "Abril Fatface", serif;
        font-size: 2rem;
        margin: 0 0 1rem;
        position: relative;
        z-index: 1;
    }

    .review-cta__text {
        font-family: "Darker Grotesque", sans-serif;
        font-size: 1.3rem;
        opacity: 0.9;
        margin: 0 0 2rem;
        position: relative;
        z-index: 1;
        color: #e3d4b4;
    }

    .review-cta__button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 1rem 2.5rem;
        border-radius: 6px;
        background: #fef8eb;
        color: #152705;
        font-family: "Montserrat", sans-serif;
        font-size: 0.9rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        text-decoration: none;
        transition: all 0.3s ease;
        position: relative;
        z-index: 1;
    }

    .review-cta__button:hover {
        background: #fff;
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }

    @media (max-width: 768px) {
        .review-hero {
            padding: 4rem 1.25rem;
        }

        .review-options,
        .review-tips,
        .review-cta {
            padding: 3rem 1.25rem;
        }

        .review-cta__inner {
            padding: 3rem 1.5rem;
        }

        .review-hero__title {
            font-size: 2.5rem;
        }
    }
</style>
