---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import jojoImage from "../assets/images/about/jojo-lead-photographer-creative-director-perth.webp";
import stefanoImage from "../assets/images/about/stefano-web-developer-astro-expert-perth.webp";

const pageTitle =
  "About Amplify Creative Lab | Perth Photography & Web Development Studio";
const pageDescription =
  "Meet the team behind Amplify Creative Lab in Perth, WA. Jojo specialises in food, product and event photography. Stefano builds fast, SEO-optimised websites for hospitality brands across Western Australia.";

const jojoPersonSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "@id": "https://amplifycreativelab.com/#person-jojo",
  name: "Jojo",
  jobTitle: "Lead Photographer & Creative Director",
  worksFor: {
    "@id": "https://amplifycreativelab.com/#organization",
  },
  description:
    "Perth-based food, product and event photographer specialising in hospitality and lifestyle brands across Western Australia.",
  knowsAbout: [
    "Food Photography",
    "Product Photography",
    "Event Photography",
    "Restaurant Photography",
    "Hospitality Branding",
    "Commercial Photography Perth",
  ],
  areaServed: {
    "@type": "City",
    name: "Perth",
    containedInPlace: {
      "@type": "State",
      name: "Western Australia",
      containedInPlace: {
        "@type": "Country",
        name: "Australia",
      },
    },
  },
};

const stefanoPersonSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "@id": "https://amplifycreativelab.com/#person-stefano",
  name: "Stefano",
  jobTitle: "Web Developer & Technical Strategist",
  worksFor: {
    "@id": "https://amplifycreativelab.com/#organization",
  },
  description:
    "Perth web developer specialising in fast, SEO-optimised websites for hospitality and lifestyle brands using Astro and modern frameworks.",
  knowsAbout: [
    "Web Development",
    "Astro Framework",
    "Technical SEO",
    "Local SEO Perth",
    "Core Web Vitals",
    "Schema Markup",
    "Website Performance Optimisation",
  ],
  areaServed: {
    "@type": "City",
    name: "Perth",
    containedInPlace: {
      "@type": "State",
      name: "Western Australia",
      containedInPlace: {
        "@type": "Country",
        name: "Australia",
      },
    },
  },
};

const aboutPageSchema = {
  "@context": "https://schema.org",
  "@type": "AboutPage",
  "@id": "https://amplifycreativelab.com/about/",
  url: "https://amplifycreativelab.com/about/",
  name: pageTitle,
  description: pageDescription,
  mainEntity: {
    "@id": "https://amplifycreativelab.com/#organization",
  },
  about: [
    { "@id": "https://amplifycreativelab.com/#person-jojo" },
    { "@id": "https://amplifycreativelab.com/#person-stefano" },
  ],
};
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main class="page-about">
    <div class="about-poster" aria-label="About Amplify Creative Lab">
      <div class="poster">
        <div class="poster__grid">
          <div class="poster__spacer" aria-hidden="true"></div>

          <div class="poster__content">
            <p class="poster__kicker">ABOUT AMPLIFY CREATIVE LAB</p>
            <h1 class="poster__headline">
              Photography and web development under one roof.
            </h1>
            <p class="poster__lede">
              Amplify Creative Lab is a small Perth studio led by Jojo and
              Stefano. We combine commercial photography with fast,
              search-friendly websites so your restaurant, bar or brand looks
              incredible everywhere it shows up online.
            </p>
          </div>
        </div>
      </div>
    </div>

    <section id="jojo" class="jojo-section" aria-label="About Jojo">
      <div class="jojo-container">
        <!-- 1. Left Headline -->
        <div class="jojo-col-headline">
          <h2>
            CAPTURING<br /> THE SOUL BEHIND<br /> YOUR FOOD,<br /> MOMENTS AND<br
            /> BRAND.
          </h2>
        </div>

        <!-- 2. Center Image -->
        <div class="jojo-col-image">
          <div class="jojo-image-wrapper">
            <Image
              src={jojoImage}
              alt="Jojo - Perth food, product and event photographer at Amplify Creative Lab"
              width={800}
              height={1000}
              loading="lazy"
              decoding="async"
              class="jojo-img"
            />
          </div>
        </div>

        <!-- 3. Right Content -->
        <div class="jojo-col-content">
          <h3>Hi, I’m Jojo,</h3>
          <p>
            The photographer behind Amplify Creative Lab, <strong
              >based in Perth</strong
            >. I specialise in <strong
              >food, product and event photography</strong
            > for restaurants, cafés and hospitality brands across Western Australia.
          </p>
          <p>
            With a strong background in hospitality and years spent shooting in
            real kitchens, I understand how service flows, how food behaves
            under pressure, and how to capture dishes at their best – without
            disrupting your team. From Uber Eats hero images to full restaurant
            rebrands, <strong
              >my focus is simple: create visuals that feel authentic, look
              beautiful, and help you sell more.</strong
            >
          </p>
          <p>
            More than just content creation, I work from your customer’s
            perspective. I pay close attention to people, atmosphere and
            storytelling, capturing not only what your food looks like, but <strong
              >the soul behind your brand.</strong
            >
          </p>
          <p>
            Whether you need clean packshots, lifestyle imagery in-venue, or
            content designed for social media and online campaigns, <strong
              >every shoot is tailored to your menu, brand and marketing goals</strong
            >. Let’s create visual content that connects, converts, and makes
            your brand stand out.
          </p>
          <a href="/portfolio/" class="jojo-btn">See Jojo’s Portfolio</a>
        </div>
      </div>
    </section>

    <section id="stefano" class="stefano-section" aria-label="About Stefano">
      <div class="stefano-container">
        <!-- Visual Column -->
        <div class="stefano-col-visual">
          <div class="stefano-visual-inner">
            <Image
              src={stefanoImage}
              alt="Stefano - Perth web developer and technical SEO strategist at Amplify Creative Lab"
              width={800}
              height={1000}
              loading="lazy"
              class="stefano-img"
            />
          </div>
        </div>

        <!-- Content Column -->
        <div class="stefano-col-content">
          <h2>TURNING GREAT CONTENT INTO HIGH-PERFORMING WEBSITES.</h2>

          <div class="stefano-body">
            <p>
              I’m the web developer and technical strategist at Amplify Creative
              Lab. <strong
                >I plan, design and build high-performance websites for
                hospitality and lifestyle brands, with a strong focus on UX,
                speed and local SEO in Perth.</strong
              >
            </p>
            <p>
              Using modern tools like Astro, I create fast, mobile-first
              websites that pass Core Web Vitals and are easy for search engines
              to understand. This means your photos, menus and booking links
              don't just look good – they’re structured to <strong
                >help more people find you on Google and take action.</strong
              >
            </p>
            <p>
              Beyond design and development, I handle the technical details most
              business owners don't have time for: <strong
                >schema markup, on-page SEO, redirects, image optimisation and
                analytics</strong
              >, so you can clearly see how your site is performing.
            </p>
            <p>
              <strong>With a background as a chef,</strong> I understand presentation,
              timing and storytelling – and I bring that mindset into every website
              I build. Think of me as the technical backbone that helps your brand
              stand out and convert visitors into customers.
            </p>
            <p>
              Let’s build a website that’s visually compelling, strategically
              optimised, and designed to <strong>grow your business.</strong>
            </p>
            <a href="/perth-website-development/" class="stefano-cta"
              >DISCOVER WEB SERVICES</a
            >
          </div>
        </div>
      </div>
    </section>

    <section class="about-cta" aria-label="Call to action">
      <div class="cta">
        <h2 class="cta__title">Why work with a combined team?</h2>
        <p class="cta__text">
          Most studios either shoot photos <em>or</em> build websites. We do both.
          Jojo plans shoots around the pages Stefano is building, and Stefano designs
          layouts to showcase those real assets — so everything looks intentional
          and works seamlessly.
        </p>
        <a href="/contact/" class="cta__btn">Get in Touch</a>
      </div>
    </section>

    <!-- Community Support Strip -->
    <section class="community-strip">
      <div class="community-strip-inner">
        <p>
          <strong>Community Support:</strong> We dedicate time each quarter to pro-bono
          creative projects for registered Perth charities.
          <a href="/community/">View our support modules &rarr;</a>
        </p>
      </div>
    </section>
  </main>

  <script
    type="application/ld+json"
    set:html={JSON.stringify(aboutPageSchema)}
  />
  <script
    type="application/ld+json"
    set:html={JSON.stringify(jojoPersonSchema)}
  />
  <script
    type="application/ld+json"
    set:html={JSON.stringify(stefanoPersonSchema)}
  />

  <style is:global>
    .page-about {
      background: var(--color-bg);
      color: var(--color-text);
      overflow-x: hidden;
    }

    .about-poster {
      padding: 0;
      background: #e3d4b4;
      position: relative;
    }

    .poster {
      max-width: 100%;
      margin: 0;
      padding: 2.5rem 1.5rem 2.5rem;
      position: relative;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    /* Keep simple background shapes or remove if they clash. 
       Let's lighten them for the new clean look */

    .poster__grid {
      position: relative;
      z-index: 1;
      width: 100%;
      max-width: 100%;
      margin: 0 auto;
    }

    .poster__content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 2rem;
      max-width: 100%; /* Wider for big headline */
      margin: 0 auto;
    }

    .poster__kicker {
      font-family: var(--font-body);
      font-size: 0.9rem;
      letter-spacing: 0.2em;
      text-transform: uppercase;
      color: rgba(0, 0, 0, 0.6);
      margin: 0;
      font-weight: 500;
    }

    .poster__headline {
      font-family: "Montserrat", sans-serif;
      font-weight: 500;
      font-size: clamp(1.75rem, 4vw, 2.25rem);
      line-height: 1.2;
      text-transform: uppercase;
      color: #000;
      margin: 0;
      max-width: 100%;
    }

    .poster__lede {
      font-family: var(--font-body);
      font-size: 1.15rem;
      line-height: 1.6;
      color: rgba(0, 0, 0, 0.8);
      margin: 0 auto;
      max-width: 60ch;
      font-weight: 400;
    }

    .poster__actions {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 1.5rem;
      margin-top: 1rem;
    }

    .poster__btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      border-radius: 999px;
      padding: 1rem 2rem;
      font-weight: 600;
      text-decoration: none;
      letter-spacing: 0.05em;
      text-transform: uppercase;
      font-size: 0.9rem;
      transition: all 0.3s ease;
      background: transparent;
      color: #000;
      border: 1px solid rgba(0, 0, 0, 0.2);
    }

    .poster__btn:hover {
      background: #000;
      color: #fff;
      border-color: #000;
      transform: translateY(-2px);
    }

    /* Remove old variation classes to keep uniform look */
    .poster__btn--warm,
    .poster__btn--green {
      /* Handled by base class now */
    }

    .person {
      padding: clamp(2.75rem, 6vw, 5rem)
        clamp(var(--container-pad-mobile), 5vw, var(--container-pad-desktop));
    }

    .person__inner {
      max-width: 1200px;
      margin: 0 auto;
      display: grid;
      gap: clamp(1.5rem, 4vw, 3rem);
      align-items: center;
    }

    .person__content {
      position: relative;
      z-index: 1;
    }

    .person__kicker {
      font-family: var(--font-body);
      font-size: 0.82rem;
      letter-spacing: 0.25em;
      text-transform: uppercase;
      color: rgba(21, 39, 5, 0.65);
      margin: 0 0 0.75rem;
    }

    .person__title {
      font-family: var(--font-heading);
      font-size: clamp(2.25rem, 3.8vw, 3.25rem);
      line-height: 1;
      color: var(--color-heading);
      margin: 0 0 0.75rem;
    }

    .person__quote {
      font-family: var(--font-body);
      font-weight: 300;
      font-size: clamp(1.25rem, 2.2vw, 1.6rem);
      line-height: 1.25;
      color: var(--color-heading);
      margin: 0 0 1.25rem;
      max-width: 34ch;
    }

    .person__text {
      font-family: var(--font-body);
      font-size: 1.05rem;
      line-height: 1.75;
      color: rgba(84, 79, 73, 0.95);
      margin: 0;
      max-width: 65ch;
    }

    .person__text + .person__text {
      margin-top: 1rem;
    }

    .person__link {
      display: inline-block;
      margin-top: 1.35rem;
      font-weight: 600;
      text-decoration: none;
      color: var(--color-heading);
      border-bottom: 1px solid rgba(21, 39, 5, 0.35);
      padding-bottom: 2px;
      transition:
        transform 160ms ease,
        border-color 160ms ease;
    }

    .person__link:hover {
      transform: translateX(4px);
      border-bottom-color: rgba(21, 39, 5, 0.6);
    }

    .person__link:focus-visible {
      outline: 2px solid rgba(21, 39, 5, 0.45);
      outline-offset: 4px;
      border-radius: 6px;
    }

    .person__visual {
      position: relative;
      isolation: isolate;
    }

    .person__visual::before,
    .person__visual::after {
      content: "";
      position: absolute;
      z-index: -1;
      inset: auto;
      pointer-events: none;
    }

    .person__frame {
      border-radius: 18px;
      overflow: hidden;
      border: 1px solid rgba(21, 39, 5, 0.14);
      box-shadow: 0 22px 55px rgba(21, 39, 5, 0.14);
      background: rgba(255, 255, 255, 0.55);
      aspect-ratio: 4 / 5;
    }

    .person__img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transform: scale(1.01);
      transition: transform 220ms ease;
    }

    .person__frame:hover .person__img {
      transform: scale(1.04);
    }

    .person__meta {
      margin: 0.85rem 0 0;
      display: grid;
      gap: 0.25rem;
    }

    .person__metaName {
      font-family: var(--font-body);
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.06em;
      font-size: 0.9rem;
      color: var(--color-heading);
    }

    .person__metaRole {
      font-family: var(--font-body);
      font-size: 0.95rem;
      color: rgba(84, 79, 73, 0.9);
    }

    .person--jojo {
      background: linear-gradient(
        180deg,
        rgba(219, 200, 176, 0.22),
        rgba(219, 200, 176, 0)
      );
    }

    .person--jojo .person__visual::before {
      width: min(560px, 78vw);
      height: min(560px, 78vw);
      left: -18%;
      top: -12%;
      background:
        radial-gradient(
          circle at 30% 35%,
          rgba(219, 200, 176, 0.95),
          rgba(219, 200, 176, 0) 65%
        ),
        radial-gradient(
          circle at 70% 70%,
          rgba(122, 103, 83, 0.55),
          rgba(122, 103, 83, 0) 62%
        );
      border-radius: 42% 58% 68% 32% / 48% 40% 60% 52%;
      filter: blur(0.2px);
    }

    .person--jojo .person__visual::after {
      width: min(280px, 46vw);
      height: min(280px, 46vw);
      right: -10%;
      bottom: 6%;
      border-radius: 999px;
      border: 2px dashed rgba(122, 103, 83, 0.28);
      transform: rotate(-12deg);
      opacity: 0.9;
    }

    .person--stefano {
      background: linear-gradient(
        180deg,
        rgba(194, 205, 186, 0.22),
        rgba(194, 205, 186, 0)
      );
    }

    .person--stefano .person__visual::before {
      width: min(560px, 78vw);
      height: min(560px, 78vw);
      right: -18%;
      top: -12%;
      background:
        radial-gradient(
          circle at 30% 35%,
          rgba(194, 205, 186, 0.95),
          rgba(194, 205, 186, 0) 65%
        ),
        radial-gradient(
          circle at 70% 70%,
          rgba(36, 54, 15, 0.45),
          rgba(36, 54, 15, 0) 62%
        );
      border-radius: 55% 45% 35% 65% / 55% 35% 65% 45%;
      filter: blur(0.2px);
    }

    .person--stefano .person__visual::after {
      width: min(260px, 44vw);
      height: min(260px, 44vw);
      left: -8%;
      bottom: 10%;
      border-radius: 16px;
      border: 2px dashed rgba(21, 39, 5, 0.22);
      transform: rotate(10deg);
      opacity: 0.9;
    }

    .about-cta {
      padding: clamp(3.25rem, 5vw, 4.5rem)
        clamp(var(--container-pad-mobile), 5vw, var(--container-pad-desktop));
    }

    .cta {
      max-width: 1200px;
      margin: 0 auto;
      background: transparent;
      color: #fff;
      border-radius: 22px;
      padding: clamp(1.75rem, 4vw, 3rem);
      display: grid;
      gap: 1rem;
      align-items: start;
      box-shadow: 0 18px 50px rgba(21, 39, 5, 0.22);
    }

    .cta__title {
      margin: 0;
      font-family: var(--font-body);
      font-weight: 600;
      font-size: clamp(1.5rem, 2.5vw, 2rem);
      letter-spacing: -0.01em;
      color: #1f2a15;
    }

    .cta__text {
      margin: 0;
      max-width: 70ch;
      font-family: var(--font-body);
      font-size: 1.05rem;
      line-height: 1.7;
      opacity: 0.9;
      color: #1f2a15;
    }

    .cta__btn {
      justify-self: start;
      display: inline-block;
      background: var(--color-bg);
      color: var(--color-heading);
      padding: 0.9rem 1.6rem;
      border-radius: 999px;
      font-weight: 600;
      letter-spacing: 0.01em;
      text-decoration: none;
      transition:
        transform 160ms ease,
        box-shadow 160ms ease,
        background 160ms ease;
      box-shadow: 0 12px 24px rgba(0, 0, 0, 0.18);
    }

    .cta__btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 16px 32px rgba(0, 0, 0, 0.25);
      background: rgba(254, 248, 235, 0.92);
    }

    .cta__btn:focus-visible {
      outline: 2px solid rgba(255, 255, 255, 0.85);
      outline-offset: 5px;
    }

    @media (min-width: 900px) {
      .poster__grid {
        grid-template-columns: minmax(220px, 0.9fr) minmax(520px, 1.35fr);
        align-items: stretch;
        min-height: 220px;
      }

      .poster__spacer {
        display: block;
      }

      .person__inner {
        grid-template-columns: 1.1fr 0.9fr;
      }

      .person__inner--rev {
        grid-template-columns: 0.9fr 1.1fr;
      }

      .person__inner--rev > :first-child {
        order: 2;
      }

      .person__inner--rev > :last-child {
        order: 1;
      }
    }

    @media (max-width: 520px) {
      .poster__shape--mark {
        opacity: 0.16;
        inset: auto auto -52% -34%;
      }
    }

    /* New Jojo Section Styles */
    .jojo-section {
      width: 100%;
      background: #fff; /* Restored white background */
      padding: 0;
      overflow: hidden;
    }

    .jojo-container {
      display: grid;
      width: 100%;
      /* Remove max-width and margin auto for full width */
      max-width: none;
      margin: 0;
      /* Mobile Layout: Stacked */
      grid-template-columns: 1fr;
      gap: 0;
      padding-bottom: 0;
    }

    /* Column 1: Headline */
    .jojo-col-headline {
      padding: 3rem 1.5rem; /* Increased side padding for alignment breathing room */
      text-align: left;
      background: #fff; /* First section White */
      position: relative;
      z-index: 2;
    }

    .jojo-col-headline h2 {
      font-family: var(--font-heading), serif;
      font-weight: 700;
      font-size: clamp(2.6rem, 6vw, 4rem);
      line-height: 1.1;
      text-transform: uppercase;
      color: #000;
      margin: 0;
    }

    /* Column 2: Image */
    .jojo-col-image {
      position: relative;
      display: flex;
      justify-content: center;
      align-items: flex-end;
      padding: 0;
      min-height: 400px;
      /* Background handled by accent to allow overlap/extension logic if needed, 
         but for mobile stack, we can just set bg here or let accent fill it. */
    }

    .jojo-image-accent {
      position: absolute;
      background-color: #e0e0e0; /* Second section Grey */
      /* Fill container */
      inset: 0;
      z-index: 0;
    }

    .jojo-image-wrapper {
      position: relative;
      z-index: 1;
      width: 100%;
      max-width: 100%;
    }

    .jojo-img {
      width: 120%;
      max-width: none;
      height: auto;
      display: block;
      filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.1));
      transform: translateX(-15%);
    }

    /* Column 3: Content */
    .jojo-col-content {
      background-color: #1f2a15; /* Third section Green */
      color: #fff;
      padding: 2rem 1.25rem; /* Reduced padding for mobile */
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      gap: 2rem; /* Reduced gap */
    }

    .jojo-col-content h3 {
      font-family: var(--font-heading), serif;
      font-size: 1.5rem; /* Reduced font size */
      margin: 0;
      font-weight: 400;
      color: #fff;
    }

    .jojo-col-content p {
      font-family: var(--font-body), sans-serif;
      font-size: 1rem; /* Reduced font size */
      line-height: 1.55;
      margin: 0;
      color: rgba(255, 255, 255, 0.9);
      font-weight: 300;
    }

    .jojo-col-content strong {
      font-weight: 700;
      color: #fff;
    }

    .jojo-btn {
      display: inline-block;
      width: fit-content;
      margin-top: 0.5rem;
      padding: 0.85rem 1.75rem;
      border: 1px solid rgba(255, 255, 255, 0.4);
      border-radius: 999px;
      color: #fff;
      text-decoration: none;
      font-family: var(--font-body);
      font-weight: 600;
      font-size: 0.9rem;
      letter-spacing: 0.05em;
      text-transform: uppercase;
      transition: all 0.3s ease;
    }

    .jojo-btn:hover {
      background: #fff;
      color: #1f2a15;
      border-color: #fff;
    }

    /* Tablet Layout (768px - 1199px) */
    @media (min-width: 768px) and (max-width: 1199px) {
      .jojo-container {
        display: grid;
        grid-template-columns: 4fr 6fr; /* 40% Slogan, 60% Image */
        grid-template-areas:
          "headline image"
          "content content";
        gap: 0;
      }

      .jojo-col-headline {
        grid-area: headline;
