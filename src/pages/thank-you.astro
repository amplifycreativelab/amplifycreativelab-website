---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import thankYouHero from "../assets/images/thank-you/thank-you-hero.webp";

const pageTitle = "Thank you | AmplifyCreativeLab";
const pageDescription =
  "Thanks for getting in touch with Amplify Creative Lab. We’ll reply as soon as we can.";
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  noIndex={true}
  noFollow={true}
>
  <main class="thankyou-page">
    <div class="thankyou-hero">
      <div class="thankyou-inner">
        <!-- LEFT: text / content -->
        <div class="thankyou-content">
          <h1 class="thankyou-title">Thank you for your message!</h1>

          <p class="thankyou-text">
            We’ve received your enquiry and will get back to you as soon as
            possible.
          </p>

          <p class="thankyou-text subtle">
            Most enquiries receive a reply within 1 business day.
          </p>

          <div class="thankyou-steps">
            <h2 class="thankyou-steps-title">What happens next</h2>
            <ol class="thankyou-steps-list">
              <li>We review your brief and project details.</li>
              <li>We confirm our availability for your dates.</li>
              <li>We come back to you with next steps and a clear quote.</li>
            </ol>
          </div>

          <div class="thankyou-actions">
            <a href="/" class="btn-primary">Back to homepage</a>
            <a href="/portfolio/" class="btn-ghost">View our portfolio</a>
          </div>
        </div>

        <!-- RIGHT: image / visual -->
        <aside class="thankyou-visual" aria-hidden="true">
          <Image
            src={thankYouHero}
            alt=""
            class="thankyou-hero-img"
            width={800}
            height={800}
          />
          <div class="thankyou-visual-inner">
            <p class="thankyou-visual-kicker">Photography + Web Design</p>
            <p class="thankyou-visual-text">
              We help Perth hospitality and lifestyle brands stand out with
              world-class photography and high-performance websites.
            </p>
          </div>
        </aside>
      </div>
    </div>
  </main>

  <!-- Google Ads Conversion Tracking - fires when thank-you page loads -->
  <script>
    function fireConversion() {
      if (typeof window.gtag === "function") {
        window.gtag("event", "conversion_event_submit_lead_form", {
          event_category: "Lead",
          event_label: "Contact Form Submission",
        });
      }
    }

    fireConversion();
  </script>
</BaseLayout>

<style>
  .thankyou-page {
    min-height: 50vh;
    display: flex;
    align-items: center;
    padding: clamp(3rem, 6vw, 4.5rem) clamp(1.5rem, 5vw, 3rem) 0; /* Remove bottom padding */
    background-color: var(--color-bg, #fef8eb);
  }

  @media (max-width: 768px) {
    .thankyou-page {
      padding: 0;
    }
  }

  .thankyou-hero {
    width: 100%;
  }

  .thankyou-inner {
    max-width: 100%;
    margin: 0;
    display: grid;
    grid-template-columns: minmax(0, 0.9fr) minmax(0, 1.1fr);
    gap: clamp(2rem, 4vw, 3rem);
    border-radius: 18px;
    overflow: hidden;
    background: #fff;
    box-shadow: 0 18px 40px rgba(0, 0, 0, 0.08);
  }

  /* LEFT SIDE */

  .thankyou-content {
    padding: clamp(2.25rem, 4vw, 2.75rem);
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 2rem;
  }

  .thankyou-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.3rem 0.9rem;
    border-radius: 999px;
    background: rgba(36, 54, 15, 0.04);
  }

  .thankyou-badge-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 1.4rem;
    height: 1.4rem;
    border-radius: 50%;
    background: var(--color-accent, #4a2e1c);
    color: #fff;
    font-size: 0.85rem;
  }

  .thankyou-badge-text {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--color-accent, #4a2e1c);
  }

  .thankyou-title {
    font-family: var(--font-heading);
    font-size: clamp(2rem, 3.2vw, 4rem);
    color: var(--color-heading);
  }

  .thankyou-text {
    font-family: var(--font-body);
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-text);
    margin: 0 0 0.75rem;
  }

  .thankyou-text.subtle {
    font-size: 0.9rem;
    color: rgba(0, 0, 0, 0.55);
    margin-bottom: 1.4rem;
  }

  .thankyou-steps {
    margin-top: 1.2rem;
    margin-bottom: 1.8rem;
  }

  .thankyou-steps-title {
    font-family: var(--font-heading);
    font-size: 0.95rem;
    text-transform: uppercase;
    letter-spacing: 0.18em;
    color: var(--color-accent, #4a2e1c);
    margin-bottom: 0.6rem;
  }

  .thankyou-steps-list {
    list-style: decimal;
    padding-left: 1.3rem;
    margin: 0;
    font-size: 0.95rem;
    color: var(--color-text);
  }

  .thankyou-steps-list li + li {
    margin-top: 0.35rem;
  }

  .thankyou-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: 3rem;
  }

  .btn-primary,
  .btn-ghost {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.6rem;
    border-radius: 999px;
    font-family: var(--font-body);
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    text-decoration: none;
    transition:
      transform 0.12s ease,
      box-shadow 0.12s ease,
      background-color 0.12s ease,
      color 0.12s ease,
      border-color 0.12s ease;
    white-space: nowrap;
  }

  .btn-primary {
    background: var(--color-accent, #4a2e1c);
    color: #fff;
    border: 1px solid var(--color-accent, #4a2e1c);
    box-shadow: 0 10px 22px rgba(0, 0, 0, 0.16);
  }

  .btn-primary:hover {
    transform: translateY(-1px);
    box-shadow: 0 14px 30px rgba(0, 0, 0, 0.2);
  }

  .btn-ghost {
    background: transparent;
    color: var(--color-accent, #4a2e1c);
    border: 1px solid rgba(74, 46, 28, 0.35);
  }

  .btn-ghost:hover {
    background: rgba(74, 46, 28, 0.06);
    border-color: var(--color-accent, #4a2e1c);
    transform: translateY(-1px);
  }

  /* RIGHT SIDE */

  .thankyou-visual {
    position: relative;
    overflow: hidden;
    min-height: 260px;
    aspect-ratio: 1 / 1; /* Force square */
    /* Removed background-image */
  }

  .thankyou-hero-img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  /* Dark Overlay - Now reduced to a bottom mask */
  .thankyou-visual::before {
    content: "";
    position: absolute;
    inset: auto 0 0 0; /* Bottom only */
    height: 60%; /* Cover bottom part */
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.7) 0%,
      rgba(0, 0, 0, 0) 100%
    );
    z-index: 1; /* higher than image */
  }

  .thankyou-visual-inner {
    position: relative;
    z-index: 2; /* higher than overlay */
    height: 100%;
    padding: 2.2rem 2.4rem;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    color: #fef8eb;
  }

  .thankyou-visual-kicker {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.18em;
    opacity: 0.9;
    margin-bottom: 0.5rem;
    color: #fff;
    font-weight: bold;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .thankyou-visual-text {
    font-size: 0.95rem;
    line-height: 1.7;
    max-width: 22rem;
    color: #fff;
    font-weight: 500;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  /* RESPONSIVE */

  @media (max-width: 768px) {
    .thankyou-inner {
      display: flex;
      flex-direction: column-reverse;
    }

    .thankyou-visual-kicker {
      font-size: 0.7rem; /* Smaller kicker on mobile */
    }

    .thankyou-visual-text {
      font-size: 0.85rem; /* Smaller text on mobile */
      line-height: 1.5;
    }

    .thankyou-content {
      padding: 2rem 1.6rem 2.25rem;
      gap: 1.5rem; /* Reduced gap from 5rem */
    }

    .thankyou-visual {
      min-height: 400px;
      height: 400px; /* Enforce specific height for mobile */
    }

    .thankyou-visual-inner {
      padding: 0 1.5rem 1.5rem; /* Remove top padding, keep sides/bottom */
    }

    .thankyou-actions {
      flex-direction: column;
      align-items: stretch;
    }

    .btn-primary,
    .btn-ghost {
      width: 100%;
      justify-content: center;
    }
  }
</style>
