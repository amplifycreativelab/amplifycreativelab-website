---
const {
  imageSrc,
  imageAlt,
  reverse = false,
  sectionBackground,
  contentBackground,
  contentTextColor,
} = Astro.props;

const innerClass = `food-service__inner${reverse ? " food-service__inner--reverse" : ""}`;
const sectionStyle = sectionBackground ? `background-color: ${sectionBackground};` : "";

const contentStyleParts: string[] = [];
if (contentBackground) contentStyleParts.push(`background-color: ${contentBackground};`);
if (contentTextColor) contentStyleParts.push(`color: ${contentTextColor};`);
const contentStyle = contentStyleParts.join(" ");
---

<section class="food-service" style={sectionStyle}>
  <div class={innerClass}>
    <!-- Image -->
    <figure class="food-service__media">
      <img
        src={imageSrc}
        alt={imageAlt}
        loading="lazy"
        decoding="async"
        class="food-service__image"
      />
    </figure>

    <!-- Content -->
    <div class="food-service__content" style={contentStyle}>
      <slot />
    </div>
  </div>
</section>

<style is:global>
  .food-service {
    background-color: var(--e-global-color-secondary, #e8d8c3);
    min-height: 50vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .food-service__inner {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: stretch;
    justify-content: space-between;
    gap: 0;
    min-height: 50vh;
  }

  .food-service__inner--reverse {
    flex-direction: row-reverse;
  }

  /* IMAGE SIDE */
  .food-service__media {
    margin: 0;
    flex: 1 1 50%;
    max-width: 50%;
    
  }

  .food-service__image {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* TEXT SIDE */
  .food-service__content {
    flex: 1 1 50%;
    max-width: 50%;
    padding: 60px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 50px;
    text-align: left;
    color: var(--e-global-color-fadab83, #4a2e1c);
  }

  .food-service__heading {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 4px;
    margin: 0;
  }

  /* Eyebrow */
  .food-service__eyebrow {
    font-family: "Darker Grotesque", sans-serif;
    font-size: 12px;
    font-weight: 600;
    font-style: normal;
    letter-spacing: 1.5px;
    word-spacing: 5px;
    text-transform: uppercase;
    margin: 0;
  }

  /* Main heading */
  .food-service__title {
    font-family: "Abril Fatface", sans-serif;
    font-size: 40px;
    font-weight: 600;
    font-style: normal;
    line-height: 56px;
    letter-spacing: 1.5px;
    word-spacing: 5px;
    margin: 0 0 12px;
  }

  /* Body text */
  .food-service__copy p {
    margin: 0 0 0.75rem;
    font-family: "Darker Grotesque", sans-serif;
    font-size: 18px;
    font-weight: 400;
    font-style: italic;
    line-height: 22px;
  }

  .food-service__copy p:last-child {
    margin-bottom: 0;
  }

  /* Button */
  .food-service__button {
    display: inline-block;
    margin-top: 20px;
    padding: 12px 24px;
    max-width: 150px;
    font-family: "Montserrat", sans-serif;
    font-size: 15px;
    font-weight: 600;
    line-height: 1;
    text-decoration: none;
    text-align: center;
    border: solid 3px #4a2e1c;
    background-color: transparent;
    color: #4a2e1c;
    transition: all 0.3s ease;
  }

  .food-service__button:hover {
    background-color: #4a2e1c;
    color: #ffffff;
  }

  .food-service__button--light {
    border-color: #E8D8C3;
    color: #E8D8C3;
  }

  .food-service__button--light:hover {
    background-color: #E8D8C3;
    color: #4a2e1c;
  }

  /* RESPONSIVE */
  @media (max-width: 900px) {
    .food-service {
      padding: 50px 16px;
    }

    .food-service__inner {
      flex-direction: column;
    }

    .food-service__media,
    .food-service__content {
      max-width: 100%;
      flex-basis: 100%;
      padding-left: 0;
    }

    .food-service__content {
      margin-top: 30px;
    }

    .food-service__title {
      font-size: 34px;
      line-height: 1.1;
    }
  }

  @media (max-width: 600px) {
    .food-service {
      padding: 40px 16px;
    }

    .food-service__title {
      font-size: 30px;
    }

    .food-service__copy p {
      font-size: 16px;
      line-height: 22px;
    }
  }
</style>
