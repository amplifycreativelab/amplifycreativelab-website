</section>

<style>
  .portfolio-section {
    background-color: #000000;
    padding-block: 3rem;
     min-height: 100vh;
  }

  .portfolio-inner {
    /* mimic Elementor boxed container with max-width ~1490px */
    width: min(1490px, 100% - 2 * 1.5rem);
    margin-inline: auto;
  }

  .portfolio-filters {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .portfolio-filter {
    display: inline-block;
    margin-top: 0;
    padding: 12px 24px;
    max-width: 150px;
    font-family: "Montserrat", sans-serif;
    font-size: 15px;
    font-weight: 600;
    line-height: 1;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    border: solid 3px #4a2e1c;
    background-color: transparent;
    color: #4a2e1c;
    cursor: pointer;
    transition: all 0.3s ease;
    border-radius: 50px;
  }

  .portfolio-filter.is-active,
  .portfolio-filter:hover {
    background-color: #4a2e1c;
    color: #ffffff;
  }

  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 0; /* Elementor had 0 gap */
  }

  .portfolio-item {
    display: block;
    position: relative;
    overflow: hidden;
  }

  .portfolio-item-figure {
    margin: 0;
    position: relative;
  }

  .portfolio-item-image {
    width: 100%;
    height: 100%;
    aspect-ratio: 1 / 1; /* matches Elementor aspect_ratio 1:1 */
    object-fit: cover;
    display: block;
    transform: scale(1);
    transition: transform 250ms ease-out;
  }

  .portfolio-item-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    opacity: 0;
    pointer-events: none;
    background: rgba(0, 0, 0, 0.6);
    transition: opacity 250ms ease-out;
    text-align: center;
    padding: 0.75rem;
  }

  .portfolio-item-title {
    font-family: var(--font-body: "Montserrat", sans-serif;);
    font-size: 0.95rem;
    letter-spacing: 0.08em;
    font-weight: 100;
    text-transform: uppercase;
    color: #ffffff;
  }

  .portfolio-item-label {
    margin-top: 0.25rem;
    font-family: var(--font-body: "Montserrat", sans-serif;);
    font-weight: 100;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: #ffffff;
    opacity: 0.8;
  }

  .portfolio-item:hover .portfolio-item-image,
  .portfolio-item:focus-visible .portfolio-item-image {
    transform: scale(1.04);
  }

  .portfolio-item:hover .portfolio-item-overlay,
  .portfolio-item:focus-visible .portfolio-item-overlay {
    opacity: 1;
  }

  .portfolio-item:focus-visible {
    outline: 2px solid var(--color-accent, #f3b34c);
    outline-offset: 2px;
  }

  /* Tablet */
  @media (max-width: 1024px) {
    .portfolio-grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .portfolio-inner {
      width: min(100% - 2 * 1rem, 100%);
    }

    .portfolio-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    .portfolio-item-title {
      font-size: 0.85rem;
    }

    .portfolio-item-label {
      font-size: 0.75rem;
      letter-spacing: 0.15em;
    }
  }

  /* Lightbox overlay */
  .portfolio-lightbox {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.9);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 1000;
  }

  .portfolio-lightbox.is-active {
    display: flex;
  }

  .portfolio-lightbox__figure {
    margin: 0;
    max-width: min(90vw, 1200px);
    max-height: 90vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
  }

  .portfolio-lightbox__image {
    max-width: 100%;
    max-height: 80vh;
    object-fit: contain;
    border-radius: 4px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
  }

  .portfolio-lightbox__caption {
    color: #ffffff;
    font-family: "Montserrat", sans-serif;
    font-size: 0.85rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    text-align: center;
    opacity: 0.85;
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .portfolio-lightbox__title {
    font-weight: 400;
  }

  .portfolio-lightbox__index {
    font-weight: 200;
  }

  .portfolio-lightbox__close {
    position: absolute;
    top: 16px;
    right: 20px;
    background: transparent;
    border: none;
    color: #ffffff;
    font-size: 2rem;
    line-height: 1;
    cursor: pointer;
  }

  .portfolio-lightbox__nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.5);
    border: none;
    color: #ffffff;
    font-size: 2rem;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
  }

  .portfolio-lightbox__nav--prev {
    left: 20px;
  }

  .portfolio-lightbox__nav--next {
    right: 20px;
  }

  @media (max-width: 768px) {
    .portfolio-lightbox__nav {
      font-size: 1.5rem;
      width: 40px;
      height: 40px;
    }
  }
</style>
