<script>
  // @ts-nocheck
  const ITEMS_PER_BATCH = 12;

  if (typeof window !== "undefined") {
    window.addEventListener("DOMContentLoaded", () => {
      /** @type {HTMLElement | null} */
      const grid = document.querySelector(".portfolio-grid");
      const filterButtons = Array.from(
        /** @type {NodeListOf<HTMLElement>} */ (
          document.querySelectorAll(".portfolio-filter[data-filter]")
        ),
      );
      /** @type {HTMLElement | null} */
      const loadMoreButton = document.querySelector(".portfolio-load-more");
      /** @type {HTMLElement[]} */
      const items = grid
        ? Array.from(
            /** @type {NodeListOf<HTMLElement>} */ (
              grid.querySelectorAll(".portfolio-item")
            ),
          )
        : [];

      let currentFilter =
        (filterButtons[0] && filterButtons[0].dataset.filter) || "food";
      let visibleCount = ITEMS_PER_BATCH;

      /**
       * @param {string} filter
       * @returns {HTMLElement[]}
       */
      function getItemsForFilter(filter) {
        if (filter === "all") return items;
        return items.filter((item) => item.dataset.category === filter);
      }

      function updateVisibility() {
        const visibleItems = getItemsForFilter(currentFilter);

        items.forEach((item) => {
          item.style.display = "none";
        });

        visibleItems.forEach((item, index) => {
          if (index < visibleCount) {
            item.style.display = "block";
          }
        });

        if (loadMoreButton) {
          loadMoreButton.style.display =
            visibleCount >= visibleItems.length ? "none" : "inline-block";
        }
      }

      filterButtons.forEach((button) => {
        button.addEventListener("click", () => {
          const filter = button.dataset.filter || "all";
          currentFilter = filter;
          visibleCount = ITEMS_PER_BATCH;

          filterButtons.forEach((btn) => {
            if (btn === button) {
              btn.classList.add("is-active");
            } else {
              btn.classList.remove("is-active");
            }
          });

          updateVisibility();
        });
      });

      if (loadMoreButton) {
        loadMoreButton.addEventListener("click", () => {
          visibleCount += ITEMS_PER_BATCH;
          updateVisibility();
        });
      }

      updateVisibility();

      // Lightbox behavior
      /** @type {HTMLElement | null} */
      const lightbox = document.querySelector(".portfolio-lightbox");
      const lightboxImage = /** @type {HTMLImageElement | null} */ (
        lightbox && lightbox.querySelector(".portfolio-lightbox__image")
      );
      const lightboxTitle =
        lightbox && lightbox.querySelector(".portfolio-lightbox__title");
      const lightboxIndex =
        lightbox && lightbox.querySelector(".portfolio-lightbox__index");
      const closeButton =
        lightbox && lightbox.querySelector(".portfolio-lightbox__close");
      const prevButton =
        lightbox && lightbox.querySelector(".portfolio-lightbox__nav--prev");
      const nextButton =
        lightbox && lightbox.querySelector(".portfolio-lightbox__nav--next");

      let currentIndex = 0;

      /**
       * @param {number} index
       */
      function openLightbox(index) {
        if (!lightbox || !lightboxImage) return;

        const item = items[index];
        if (!item) return;

        /** @type {HTMLImageElement | null} */
        const img = item.querySelector(".portfolio-item-image");
        if (!img) return;

        currentIndex = index;

        lightboxImage.src = img.src;
        lightboxImage.alt = img.alt || "";

        const title =
          item.dataset.title ||
          item.getAttribute("data-title") ||
          img.alt ||
          "";

        if (lightboxTitle) {
          lightboxTitle.textContent = title;
        }

        if (lightboxIndex) {
          lightboxIndex.textContent = `${index + 1} / ${items.length}`;
        }

        lightbox.classList.add("is-active");
        lightbox.setAttribute("aria-hidden", "false");
        document.body.style.overflow = "hidden";
      }

      function closeLightbox() {
        if (!lightbox) return;
        lightbox.classList.remove("is-active");
        lightbox.setAttribute("aria-hidden", "true");
        document.body.style.overflow = "";
      }

      function showNext() {
        if (!items.length) return;
        currentIndex = (currentIndex + 1) % items.length;
        openLightbox(currentIndex);
      }

      function showPrev() {
        if (!items.length) return;
        currentIndex = (currentIndex - 1 + items.length) % items.length;
        openLightbox(currentIndex);
      }

      items.forEach((item, index) => {
        item.addEventListener("click", (event) => {
          event.preventDefault();
          openLightbox(index);
        });
      });

      if (closeButton) {
        closeButton.addEventListener("click", () => {
          closeLightbox();
        });
      }

      if (nextButton) {
        nextButton.addEventListener("click", () => {
          showNext();
        });
      }

      if (prevButton) {
        prevButton.addEventListener("click", () => {
          showPrev();
        });
      }

      document.addEventListener("keydown", (event) => {
        if (event.key === "Escape") {
          closeLightbox();
        }
        if (event.key === "ArrowRight") {
          showNext();
        }
        if (event.key === "ArrowLeft") {
          showPrev();
        }
      });

      if (lightbox) {
        lightbox.addEventListener("click", (event) => {
          if (event.target === lightbox) {
            closeLightbox();
          }
        });
      }
    });
  }
</script>

