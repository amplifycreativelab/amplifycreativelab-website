<style>
  /* ========== HOMEPAGE – SERVICES SECTION ========== */

/* Whole section background only */
.services {
  background: var(--color-page-bg, #fef8eb);
}

/* Bar with top/bottom border, full-width like the original screenshot */
.services-heading-bar {
  width: 100%;
  border-top: 2px solid var(--color-heading);
  border-bottom: 2px solid var(--color-heading);
  padding: 20px 0;
}

/* Center the text inside the bar */
.services-heading {
  display: flex;
  justify-content: center;
  align-items: center;
  width: min(100%, var(--container-max));
  margin: 0 auto;
}

.services-title {
  font-family: "Abril Fatface", Sans-serif;
  font-size: 35px;
  font-weight: 300;
  line-height: 12px;
  letter-spacing: 1.6px;
  color: #152705;
  margin: 0;
  text-align: center;
}

/* Content area below the bar */
.services-container {
  width: min(100%, );
  padding: 40px 40px 40px 40px;
  /* top 20, sides 40, bottom 40 (like Elementor row) */
}


/* Grid of service cards – same as original */
.services-grid {
  display: grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap: 40px;
  width: 100%;
}

/* Individual card layout */
/* Single service card – matches Elementor child container behaviour */
.service-card {
  display: flex;
  flex-direction: column;
  /* image on top, button below */
  justify-content: center;
  /* center content vertically inside card */
  align-items: center;
  /* center horizontally */
  gap: 20px;
  /* same as Elementor widget spacing */
  padding: 10px;
  /* similar to Elementor default container padding */
}


/* Image fills card width */
.service-image-link,
.service-image {
  display: block;
  width: 100%;
  height: auto;
}

/* Button under each image */
.service-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-family: "Montserrat", Sans-serif;
  padding: 0.6rem 1.5rem;
  font-size: 1rem;
  font-weight: 600;
  text-decoration: underline;
  letter-spacing: 0.08em;
  border-radius: 3px;
  background-color: transparent;
  color: var(--color-accent, #24360f);
  border: none;
  cursor: pointer;
  transition: background-color var(--transition-fast, 0.3s ease);
}

.service-button:hover {
  background-color: var(--color-accent-hover);
  color: var(--color-bg, #fef8eb);
}

/* Responsive columns, same behaviour as Elementor “wrap” */
@media (max-width: 1024px) {
  .services-grid {
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }
}

@media (max-width: 768px) {
  .services-grid {
    grid-template-columns: 1fr;
  }
}


/* Mobile responsiveness */
@media (max-width: 1024px) {
  .services-container {
    padding: 15px 0;
  }

  .services-grid {
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }
}

@media (max-width: 768px) {
  .services-container {
    padding: 15px 0;
  }

  .services-title {
    font-size: 28px;
    line-height: 10px;
  }

  .services-grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 1024px) {
  .services-container {
    padding: 20px var(--container-pad-tablet) 30px;
  }
}

@media (max-width: 768px) {
  .services-container {
    padding: 15px var(--container-pad-mobile) 25px;
  }
}
</style>
