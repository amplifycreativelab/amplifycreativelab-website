---
import { Image } from "astro:assets";
import heroSlide1Fallback from "../../../assets/images/hero/beef-ravioli-pumpkin-cream-sauce-flatlay.webp";
import heroSlide2Fallback from "../../../assets/images/hero/fine-dining-chocolate-mousse-dome-dessert.webp";
import heroSlide3Fallback from "../../../assets/images/hero/ginger-scallion-crab-noodles-food-photography.webp";

const slides = [
  {
    fallback: heroSlide1Fallback,
    alt: "Overhead flatlay of beef ravioli in pumpkin sauce, styled and photographed by Amplify Creative Lab, Perth.",
    heading: "Commercial Food Photography",
    subheading: "High-end visuals to drive reservations and orders.",
    buttonLabel: "View Our Portfolio",
    buttonHref: "/portfolio/",
  },
  {
    fallback: heroSlide2Fallback,
    alt: "Elegant dark chocolate mousse dome with gold leaf, showcasing fine dining photography services in Perth, WA.",
    heading: "Elevate Your Menu With Style",
    subheading: "Professional photos that sell your menu.",
    buttonLabel: "See Recent Work",
    buttonHref: "/portfolio/restaurant-photography/",
  },
  {
    fallback: heroSlide3Fallback,
    alt: "Vibrant stir-fried crab with ginger and noodles, captured during a commercial food photography shoot in Perth.",
    heading: "Content That Converts",
    subheading: "High-impact visuals for every marketing channel.",
    buttonLabel: "Get A Free Quote",
    buttonHref: "/contact/",
  },
];

// Time each slide stays fully visible (ms)
const SLIDE_INTERVAL = 3000;
// Shorter delay before the very first auto-advance (ms)
const INITIAL_SLIDE_DELAY = 200;
---

<section
  class="hero-new"
  data-hero-new
  data-interval={SLIDE_INTERVAL}
  data-initial-delay={INITIAL_SLIDE_DELAY}
>
  <div class="hero-new__media">
    {slides.map((slide, index) => (
      <Image
        class:list={[
          "hero-new__slide",
          index === 0 && "hero-new__slide--active",
        ]}
        src={slide.fallback}
        alt={slide.alt}
        width={1920}
        height={1080}
        widths={[640, 960, 1280, 1600, 1920]}
        sizes="100vw"
        quality={80}
        data-hero-slide
        data-index={index}
        fetchpriority={index === 0 ? "high" : undefined}
        loading={index === 0 ? "eager" : "lazy"}
        decoding="async"
      />
    ))}
  </div>

  <div class="hero-new__overlay"></div>

  <div class="hero-new__inner">
    <div class="hero-new__content">
      {slides.map((slide, index) => (
        <div
          class:list={[
            "hero-new__panel",
            index === 0 && "hero-new__panel--active",
          ]}
          data-hero-panel
          data-index={index}
          aria-hidden={index === 0 ? "false" : "true"}
        >
          <p class="hero-new__heading">{slide.heading}</p>
          <p class="hero-new__subheading">{slide.subheading}</p>
          <div class="hero-new__cta">
            <a href={slide.buttonHref} class="hero-new__button">
              {slide.buttonLabel}
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>

  <div class="hero-new__dots" aria-label="Change hero background" role="tablist">
    {slides.map((_, index) => (
      <button
        type="button"
        class:list={[
          "hero-new__dot",
          index === 0 && "hero-new__dot--active",
        ]}
        data-hero-dot
        role="tab"
        aria-label={`Go to slide ${index + 1}`}
        aria-selected={index === 0}
      />
    ))}
  </div>

  <script is:inline>
    const script = document.currentScript;
    const hero = script?.closest("[data-hero-new]");

    if (hero) {
      const slides = Array.from(
        hero.querySelectorAll("[data-hero-slide]")
      );
      const dots = Array.from(hero.querySelectorAll("[data-hero-dot]"));
      const panels = Array.from(hero.querySelectorAll("[data-hero-panel]"));

      if (slides.length > 1) {
        const intervalMs = Number(hero.dataset.interval) || 9000;
        const initialDelay =
          Number(hero.dataset.initialDelay) || Math.min(intervalMs, 1000);

        let index = 0;
        let timer;
        let initialTimeout;
        let hasStarted = false;

        const goToSlide = (nextIndex) => {
          const total = slides.length;
          const newIndex = ((nextIndex % total) + total) % total;

          if (newIndex === index) return;

          slides[index].classList.remove("hero-new__slide--active");
          dots[index]?.classList.remove("hero-new__dot--active");
          dots[index]?.setAttribute("aria-selected", "false");
          if (panels[index]) {
            panels[index].classList.remove("hero-new__panel--active");
            panels[index].setAttribute("aria-hidden", "true");
          }

          index = newIndex;

          slides[index].classList.add("hero-new__slide--active");
          dots[index]?.classList.add("hero-new__dot--active");
          dots[index]?.setAttribute("aria-selected", "true");
          if (panels[index]) {
            panels[index].classList.add("hero-new__panel--active");
            panels[index].setAttribute("aria-hidden", "false");
          }
        };

        const clearInitial = () => {
          if (initialTimeout) {
            clearTimeout(initialTimeout);
            initialTimeout = undefined;
          }
        };

        const stop = () => {
          if (timer) {
            clearInterval(timer);
            timer = undefined;
          }
        };

        const start = () => {
          clearInitial();
          stop();
          timer = setInterval(() => {
            goToSlide(index + 1);
          }, intervalMs);
          hasStarted = true;
        };

        const scheduleInitial = () => {
          if (hasStarted) {
            start();
            return;
          }

          clearInitial();
          initialTimeout = setTimeout(() => {
            goToSlide(index + 1);
            start();
          }, initialDelay);
        };

        dots.forEach((dot, dotIndex) => {
          dot.addEventListener("click", () => {
            clearInitial();
            goToSlide(dotIndex);
            start();
          });
        });

        hero.addEventListener("click", () => {
          stop();
          clearInitial();
        });

        scheduleInitial();
      } else {
        // If there's only one slide, hide the dots.
        const dotsWrapper = hero.querySelector(".hero-new__dots");
        if (dotsWrapper) {
          dotsWrapper.style.display = "none";
        }
      }
    }
  </script>
</section>

<style>
  .hero-new {
    position: relative;
    width: 100%;
    min-height: 60vh;
    color: var(--color-bg, #fef8eb);
    overflow: hidden;
    display: flex;
    align-items: stretch;
    justify-content: center;
    isolation: isolate;
  }

  @media (min-width: 768px) {
    .hero-new {
      min-height: 100vh;
    }
  }

  .hero-new__media {
    position: absolute;
    inset: 0;
    z-index: -2;
    overflow: hidden;
  }

  .hero-new__slide {
    position: absolute;
    inset: 0;
    opacity: 0;
    transition: opacity 1s ease-in-out;
    will-change: opacity;
    pointer-events: none;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .hero-new__slide--active {
    opacity: 1;
    z-index: -1;
  }

  .hero-new__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0.35),
        rgba(0, 0, 0, 0.15)
      );
    mix-blend-mode: multiply;
    opacity: 0.85;
    z-index: -1;
    pointer-events: none;
  }

  .hero-new__inner {
    position: relative;
    z-index: 1;
    width: 100%;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding-inline: clamp(20px, 6vw, 80px);
    padding-bottom: clamp(2rem, 7vh, 4rem);
  }

  .hero-new__content {
    max-width: 700px;
    text-align: center;
    text-shadow:
      0 10px 30px rgba(0, 0, 0, 0.7),
      0 0 1px rgba(0, 0, 0, 0.6);
  }

  .hero-new__panel {
    display: none;
  }

  .hero-new__panel--active {
    display: block;
  }

  .hero-new__heading {
    font-family: var(--font-heading, var(--font-body));
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    font-size: clamp(2.1rem, 3vw + 1rem, 3.4rem);
    line-height: 1;
    margin: 0 0 0rem;
    position: relative;
    display: inline-block;
  }

  .hero-new__heading::after {
    content: "";
    position: absolute;
    left: 50%;
    bottom: -0.7rem;
    transform: translateX(-50%);
    width: 60%;
    max-width: 200px;
    height: 1px;
    background-color: rgba(255, 255, 255, 0.6);
  }

  .hero-new__subheading {
    margin: 1.8rem auto 0;
    max-width: 40rem;
    font-size: clamp(1rem, 1.1vw + 0.85rem, 1.4rem);
    line-height: 1.5;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.92);
  }

  .hero-new__cta {
    margin-top: 2.5rem;
  }

  .hero-new__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.9rem 2.6rem;
    border-radius: 6px;
    background-color: rgba(255, 255, 255, 0.94);
    color: #111;
    border: 1px solid rgba(255, 255, 255, 0.5);
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-size: 0.9rem;
    font-weight: 500;
    box-shadow: 0 14px 40px rgba(0, 0, 0, 0.35);
    transition:
      background-color 0.2s ease,
      color 0.2s ease,
      box-shadow 0.2s ease,
      transform 0.2s ease;
  }

  .hero-new__button:hover {
    background-color: #ffffff;
    color: #111;
    transform: translateY(-1px);
    box-shadow: 0 18px 50px rgba(0, 0, 0, 0.45);
  }

  .hero-new__button:focus-visible {
    outline: 2px solid var(--color-accent, #24360f);
    outline-offset: 3px;
  }

  .hero-new__dots {
    position: absolute;
    left: 50%;
    bottom: 1.8rem;
    transform: translateX(-50%);
    display: flex;
    gap: 0.45rem;
    z-index: 2;
  }

  .hero-new__dot {
    width: 3px;
    height: 3px;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.8);
    background-color: rgba(0, 0, 0, 0.25);
    padding: 0;
    cursor: pointer;
    opacity: 0.7;
    transition:
      opacity 0.2s ease,
      background-color 0.2s ease,
      transform 0.2s ease;
  }

  .hero-new__dot--active {
    background-color: rgba(255, 255, 255, 0.98);
    opacity: 1;
    transform: scale(1.15);
  }

  .hero-new__dot:focus-visible {
    outline: 2px solid var(--color-accent, #24360f);
    outline-offset: 2px;
  }

  @media (max-width: 768px) {
    .hero-new {
      min-height: 70vh;
    }

    .hero-new__inner {
      padding-inline: 20px;
      padding-bottom: 2rem;
    }

    .hero-new__heading {
      font-size: 0.8rem;
    }

    .hero-new__subheading {
      font-size: 0.7rem;
    }

    .hero-new__cta {
      margin-top: 1rem;
    }

    .hero-new__dots {
      bottom: 1rem;
    }
     .hero-new__button {
    
    padding: 0.3rem 0.8rem;
    font-size: 0.4rem;
  }
</style>
