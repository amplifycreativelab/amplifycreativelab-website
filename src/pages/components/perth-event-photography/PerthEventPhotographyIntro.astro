---
// src/components/FoodPhotographyIntro.astro

const title = "Event Photography";
---

<section class="food-intro">
  <h2 class="food-intro__title">{title}</h2>

  <p class="food-intro__tagline">Capture the Extraordinary in Every Moment</p>

  <p class="food-intro__body">
    Capture life’s precious moments and tell your story through the art of
    portrait photography. We specialise in Family, Personal Portrait, and
    Wedding Photography, creating lasting keepsakes that go beyond a snapshot.
  </p>

  

  <p class="food-intro__cta">Ready to make memories?</p>
</section>

<style>
  .food-intro {
    background-color: #93897e;
    color: var(--e-global-color-primary, #fef8eb);
    min-height: 30vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    gap: 30px;
    text-align: center;
  }

  .food-intro__title {
    font-family: "Abril Fatface", sans-serif;
    font-size: 50px;
    font-weight: 500;
    line-height: 26px;
    letter-spacing: 0;
    word-spacing: 5px;
    color: var(--e-global-color-primary, #fef8eb);
    margin: 0;
  }

  /* ✅ Updated with your tagline styles */
  .food-intro__tagline {
    margin: 0 auto;

    font-family: "Darker Grotesque", sans-serif;
    font-size: 18px;
    font-weight: 500;
    letter-spacing: 0;
    line-height: 1.3;
    color: var(--e-global-color-primary, #fef8eb);
  }

  /* ✅ Updated with your body styles */
  .food-intro__body {
    margin: 0 auto;

    font-family: "Darker Grotesque", sans-serif;
    font-size: 24px;
    font-weight: 500;
    font-style: italic;
    line-height: 28px;
    color: var(--e-global-color-primary, #fef8eb);
  }

  .food-intro__cta {
    font-family: "Darker Grotesque", sans-serif;
    font-size: 28px;
    font-weight: 300;
    font-style: italic;
    letter-spacing: 1px;
    color: var(--e-global-color-primary, #fef8eb);
    margin-top: 10px;
  }

  @media (max-width: 1024px) {
    .food-intro {
      padding: 32px 24px;
      gap: 24px;
    }

    .food-intro__title {
      font-size: 42px;
      line-height: 1.1;
    }
  }

  @media (max-width: 768px) {
    .food-intro {
      padding: 28px 20px;
      min-height: auto;
    }

    .food-intro__title {
      font-size: 34px;
    }

    .food-intro__tagline {
      font-size: 16px;
    }

    .food-intro__body {
      font-size: 20px;
      line-height: 26px;
    }
  }
</style>
